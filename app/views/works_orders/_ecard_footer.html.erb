<div class="bg-white border-2 border-gray-300 mt-6">
  <div class="bg-gray-50 px-4 py-2 border-b border-gray-300">
    <h3 class="font-semibold">Work Order Summary</h3>
  </div>

  <div class="p-4">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 text-sm">
      <!-- Progress Summary -->
      <div class="bg-blue-50 border border-blue-200 rounded p-3">
        <h4 class="font-semibold text-blue-800 mb-2">Progress</h4>
        <% total_ops = works_order.part.locked_operations.count %>
        <% completed_ops = works_order.part.locked_operations.count { |op| operation_signed_off?(works_order, op) } %>
        <div class="text-lg font-bold text-blue-600">
          <%= completed_ops %>/<%= total_ops %> Operations
        </div>
        <div class="text-xs text-blue-600">
          <%= total_ops > 0 ? ((completed_ops.to_f / total_ops * 100).round(1)) : 0 %>% Complete
        </div>
      </div>

      <!-- Quality Status -->
      <div class="bg-green-50 border border-green-200 rounded p-3">
        <h4 class="font-semibold text-green-800 mb-2">Quality</h4>
        <div class="text-green-600 font-medium">No Issues</div>
        <div class="text-xs text-green-600">All clear</div>
      </div>

      <!-- Release Status -->
      <div class="bg-yellow-50 border border-yellow-200 rounded p-3">
        <h4 class="font-semibold text-yellow-800 mb-2">Release Status</h4>
        <div class="text-lg font-bold text-yellow-600">
          <%= works_order.quantity_released %>/<%= works_order.quantity %>
        </div>
        <div class="text-xs text-yellow-600">
          <%= works_order.unreleased_quantity %> remaining
        </div>
      </div>
    </div>

    <!-- Action Buttons -->
    <div class="mt-4 pt-4 border-t border-gray-200 flex justify-between items-center">
      <div class="text-xs text-gray-500">
        Last updated: <%= works_order.updated_at.strftime("%d/%m/%Y %H:%M") %>
      </div>

      <div class="space-x-2">
        <%= link_to "View Full Details", works_order_path(works_order),
            class: "bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded text-sm" %>
      </div>
    </div>
  </div>
</div>
