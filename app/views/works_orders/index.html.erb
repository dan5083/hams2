<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Works Orders</h1>
    <%= link_to "New Works Order", new_works_order_path,
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <!-- Filters -->
  <div class="bg-white p-4 rounded-lg shadow mb-6">
    <%= form_with url: works_orders_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>

      <!-- Search Field -->
      <div class="flex-1 min-w-64">
        <%= form.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :search,
            value: params[:search],
            placeholder: "Search by WO number, part number, release note number, or customer...",
            autocomplete: "off",
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
        <p class="text-xs text-gray-500 mt-1">
          Search works order numbers, part numbers, release note numbers, or customer names
        </p>
      </div>

      <!-- Status Filter -->
      <div>
        <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :status,
            options_for_select([
              ['All', ''],
              ['Open', 'open'],
              ['Closed', 'closed']
            ], params[:status]),
            {},
            { class: "border border-gray-300 rounded-md px-3 py-2" } %>
      </div>

      <!-- Filter and Clear Buttons -->
      <div class="flex gap-2">
        <%= form.submit "Filter", class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Clear", works_orders_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-700 font-bold py-2 px-4 rounded" %>
      </div>

    <% end %>
  </div>

  <!-- Results Summary -->
  <div class="mb-4">
    <p class="text-sm text-gray-600">
      Showing <%= @works_orders.count %> of <%= @works_orders.total_count %> works orders
      <% if params[:search].present? %>
        matching "<%= params[:search] %>"
      <% end %>
      <% if params[:status].present? %>
        with status "<%= params[:status] %>"
      <% end %>
    </p>
  </div>

  <!-- Works Orders Table -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            WO Number
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Customer Order
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Customer
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Part Number
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Quantity
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Progress
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @works_orders.each do |works_order| %>
          <tr class="hover:bg-gray-50 <%= 'bg-red-50' if works_order.voided %>">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= link_to "WO#{works_order.number}", works_order, class: "text-blue-600 hover:text-blue-900" %>
              <% if works_order.voided %>
                <span class="ml-2 inline-flex items-center px-2 py-1 text-xs font-medium rounded-full bg-red-100 text-red-800">
                  Voided
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= link_to works_order.customer_order.number, works_order.customer_order,
                  class: "text-blue-600 hover:text-blue-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= works_order.customer.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= works_order.part_number %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= works_order.quantity %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <% unless works_order.voided %>
                <% if works_order.quantity_released > 0 %>
                  <span class="text-green-600 font-medium">
                    <%= works_order.quantity_released %> released
                  </span>
                  <% if works_order.quantity_remaining > 0 %>
                    <span class="text-gray-500">
                      (<%= works_order.quantity_remaining %> remaining)
                    </span>
                  <% end %>
                <% else %>
                  <span class="text-gray-500">Not started</span>
                <% end %>
              <% else %>
                <span class="text-red-500">Voided</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if works_order.voided %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                  Voided
                </span>
              <% elsif works_order.is_open %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Open
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                  Closed
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to "View", works_order, class: "text-blue-600 hover:text-blue-900" %>
                <% unless works_order.voided %>
                  <%= link_to "Edit", edit_works_order_path(works_order), class: "text-yellow-600 hover:text-yellow-900" %>
                  <%= link_to "Route Card",
                      "javascript:void(0)",
                      onclick: "printRouteCard('#{route_card_works_order_path(works_order)}')",
                      class: "text-green-600 hover:text-green-900" %>
                  <%
                    # Check if this customer order has any uninvoiced release notes
                    customer_order_has_uninvoiced = ReleaseNote.joins(:works_order)
                                                              .where(works_orders: { customer_order_id: works_order.customer_order_id })
                                                              .requires_invoicing.any?

                    # Count works orders in this customer order with uninvoiced release notes
                    uninvoiced_works_orders = works_order.customer_order.works_orders
                                                        .joins(:release_notes)
                                                        .merge(ReleaseNote.requires_invoicing)
                                                        .distinct.count
                  %>
                  <% if customer_order_has_uninvoiced %>
                    <% if uninvoiced_works_orders > 1 %>
                      <%= button_to "Invoice Order", create_invoice_works_order_path(works_order),
                          method: :patch,
                          class: "text-orange-600 hover:text-orange-900 bg-transparent border-0 underline cursor-pointer text-sm",
                          data: { confirm: "This will create one invoice for the entire customer order (#{uninvoiced_works_orders} works orders with uninvoiced items). Continue?" } %>
                    <% else %>
                      <%= button_to "Stage Invoice", create_invoice_works_order_path(works_order),
                          method: :patch,
                          class: "text-orange-600 hover:text-orange-900 bg-transparent border-0 underline cursor-pointer text-sm",
                          data: { confirm: "Create invoice for this works order?" } %>
                    <% end %>
                  <% end %>

                  <% if works_order.can_be_voided? %>
                    <%= button_to "Void", void_works_order_path(works_order),
                        method: :patch,
                        class: "text-red-600 hover:text-red-900 bg-transparent border-0 underline cursor-pointer text-sm font-medium",
                        data: { confirm: "Are you sure you want to void this works order? This cannot be undone." } %>
                  <% end %>
                <% else %>
                  <span class="text-gray-400 text-sm">No actions available</span>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @works_orders.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No works orders found.</p>
        <% if params[:search].present? || params[:status].present? %>
          <p class="text-sm text-gray-400 mt-2">
            Try adjusting your search or filters.
          </p>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if @works_orders.respond_to?(:total_pages) && @works_orders.total_pages > 1 %>
    <div class="flex justify-center mt-6">
      <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">

        <!-- Previous Page -->
        <% if @works_orders.prev_page %>
          <%= link_to works_orders_path(params.permit(:search, :status, :page).merge(page: @works_orders.prev_page)),
              class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="sr-only">Previous</span>
          <% end %>
        <% else %>
          <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400">
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="sr-only">Previous</span>
          </span>
        <% end %>

        <!-- Page Numbers -->
        <% page_range = [[@works_orders.current_page - 2, 1].max, [@works_orders.current_page + 2, @works_orders.total_pages].min] %>

        <% if page_range[0] > 1 %>
          <%= link_to works_orders_path(params.permit(:search, :status, :page).merge(page: 1)),
              class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
            1
          <% end %>
          <% if page_range[0] > 2 %>
            <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
              ...
            </span>
          <% end %>
        <% end %>

        <% (page_range[0]..page_range[1]).each do |page| %>
          <% if page == @works_orders.current_page %>
            <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-50 text-sm font-medium text-blue-600">
              <%= page %>
            </span>
          <% else %>
            <%= link_to works_orders_path(params.permit(:search, :status, :page).merge(page: page)),
                class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
              <%= page %>
            <% end %>
          <% end %>
        <% end %>

        <% if page_range[1] < @works_orders.total_pages %>
          <% if page_range[1] < @works_orders.total_pages - 1 %>
            <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
              ...
            </span>
          <% end %>
          <%= link_to works_orders_path(params.permit(:search, :status, :page).merge(page: @works_orders.total_pages)),
              class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
            <%= @works_orders.total_pages %>
          <% end %>
        <% end %>

        <!-- Next Page -->
        <% if @works_orders.next_page %>
          <%= link_to works_orders_path(params.permit(:search, :status, :page).merge(page: @works_orders.next_page)),
              class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          <% end %>
        <% else %>
          <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400">
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </span>
        <% end %>

      </nav>
    </div>

    <!-- Pagination Info -->
    <div class="text-center mt-4">
      <p class="text-sm text-gray-600">
        Page <%= @works_orders.current_page %> of <%= @works_orders.total_pages %>
        (<%= @works_orders.total_count %> total works orders)
      </p>
    </div>
  <% end %>
</div>

<!-- JavaScript for Route Card Print Functionality -->
<script>
function printRouteCard(url) {
  const printWindow = window.open(url, '_blank', 'width=800,height=600');
  printWindow.onload = function() {
    printWindow.print();
    // Optionally auto-close after printing (uncomment if desired)
    // printWindow.onafterprint = function() { printWindow.close(); };
  };
}
</script>
