<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Works Orders</h1>
    <%= link_to "New Works Order", new_works_order_path,
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <!-- Filters -->
  <div class="bg-white p-4 rounded-lg shadow mb-6">
    <%= form_with url: works_orders_path, method: :get, local: true, class: "flex gap-4 items-end" do |form| %>
      <div>
        <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :status,
            options_for_select([
              ['All', ''],
              ['Open', 'open'],
              ['Closed', 'closed']
            ], params[:status]),
            {},
            { class: "border border-gray-300 rounded-md px-3 py-2" } %>
      </div>

      <div>
        <%= form.submit "Filter", class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>

  <!-- Works Orders Table -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            WO Number
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Customer
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Part Number
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Quantity
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Progress
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @works_orders.each do |works_order| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= link_to "WO#{works_order.number}", works_order, class: "text-blue-600 hover:text-blue-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= works_order.customer.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= works_order.part_number %>-<%= works_order.part_issue %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= works_order.quantity %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <% if works_order.quantity_released > 0 %>
                <span class="text-green-600 font-medium">
                  <%= works_order.quantity_released %> released
                </span>
                <% if works_order.quantity_remaining > 0 %>
                  <span class="text-gray-500">
                    (<%= works_order.quantity_remaining %> remaining)
                  </span>
                <% end %>
              <% else %>
                <span class="text-gray-500">Not started</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if works_order.is_open %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Open
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                  Closed
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to "View", works_order, class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "Edit", edit_works_order_path(works_order), class: "text-yellow-600 hover:text-yellow-900" %>
                <%= link_to "Route Card", route_card_works_order_path(works_order),
                    class: "text-green-600 hover:text-green-900", target: "_blank" %>
                <% if works_order.quantity_released > 0 && works_order.release_notes.requires_invoicing.any? %>
                  <%= button_to "Create Invoice in Xero", create_invoice_works_order_path(works_order),
                      method: :patch,
                      class: "text-orange-600 hover:text-orange-900 bg-transparent border-0 underline cursor-pointer text-sm",
                      data: { confirm: "Create invoice in Xero for all uninvoiced release notes?" } %>
                <% end %>
                <% if works_order.can_be_completed? %>
                  <%= link_to "Complete", complete_works_order_path(works_order),
                      method: :patch,
                      class: "text-purple-600 hover:text-purple-900",
                      data: { confirm: "Are you sure you want to complete this works order?" } %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @works_orders.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No works orders found.</p>
      </div>
    <% end %>
  </div>
</div>
