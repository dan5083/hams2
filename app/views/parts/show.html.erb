<%# app/views/parts/show.html.erb - Part View without Operations Details %>
<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Part: <%= @part.part_number %></h1>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_part_path(@part),
          class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
      <%= button_to @part.enabled? ? "Disable" : "Enable",
          toggle_enabled_part_path(@part),
          method: :patch,
          form: {
            data: { confirm: "Are you sure you want to #{@part.enabled? ? 'disable' : 'enable'} this part?" }
          },
          class: @part.enabled? ? "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" : "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <% if @part.can_be_deleted? %>
        <%= button_to "Delete", part_path(@part),
            method: :delete,
            form: {
              data: { confirm: "Are you sure you want to delete this part? This cannot be undone." }
            },
            class: "bg-red-600 hover:bg-red-800 text-white font-bold py-2 px-4 rounded" %>
      <% end %>
      <%= link_to "Back to Parts", parts_path,
          class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Part Details -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Part Details</h2>

      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Customer</dt>
          <dd class="text-sm text-gray-900"><%= @part.customer.name %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Part Number</dt>
          <dd class="text-sm text-gray-900 font-mono"><%= @part.part_number %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Part Issue</dt>
          <dd class="text-sm text-gray-900 font-mono"><%= @part.part_issue %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Specification</dt>
          <dd class="text-sm text-gray-900">
            <% if @part.specification.present? %>
              <%= simple_format(@part.specification) %>
            <% else %>
              <span class="text-gray-500 italic">No specification selected</span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Process Type</dt>
          <dd class="text-sm text-gray-900"><%= @part.process_type&.humanize %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Operations Mode</dt>
          <dd class="text-sm">
            <% if @part.locked_for_editing? %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">
                Manual Editing
              </span>
            <% else %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                Automatic Configuration
              </span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="text-sm">
            <% if @part.enabled %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                Enabled
              </span>
            <% else %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                Disabled
              </span>
            <% end %>
            <% if @part.aerospace_defense? %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800 ml-2">
                Aerospace/Defense
              </span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="text-sm text-gray-900"><%= @part.created_at.strftime("%d/%m/%Y %H:%M") %></dd>
        </div>
      </dl>
    </div>

    <!-- Usage Summary -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Usage Summary</h2>

      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Total Works Orders</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= @part.works_orders.count %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Active Works Orders</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= @part.works_orders.where(voided: false).count %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Open Works Orders</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= @part.works_orders.where(is_open: true, voided: false).count %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Operations Summary</dt>
          <dd class="text-sm text-gray-900"><%= @part.operations_summary %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Can be deleted?</dt>
          <dd class="text-sm">
            <% if @part.can_be_deleted? %>
              <span class="text-green-600">✓ Yes</span>
            <% else %>
              <span class="text-red-600">✗ No (has works orders)</span>
            <% end %>
          </dd>
        </div>
      </dl>

      <% if @part.can_be_deleted? %>
        <div class="mt-4 pt-4 border-t border-gray-200">
          <%= button_to "Delete Part", part_path(@part),
              method: :delete,
              class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded text-sm",
              form: { data: { confirm: "Are you sure you want to delete this part? This cannot be undone." } } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Processing Configuration Summary (only show if not locked and has configuration) -->
  <% if !@part.locked_for_editing? && @part.operation_selection.any? %>
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Processing Configuration Summary</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <% if @part.anodising_types.any? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Treatment Types</dt>
            <dd class="text-sm text-gray-900">
              <% @part.anodising_types.each do |type| %>
                <%
                  badge_color = case type
                  when 'chemical_conversion'
                    'bg-orange-100 text-orange-800'
                  when 'hard_anodising'
                    'bg-purple-100 text-purple-800'
                  when 'chromic_anodising'
                    'bg-green-100 text-green-800'
                  when 'electroless_nickel_plating'
                    'bg-indigo-100 text-indigo-800'
                  else
                    'bg-blue-100 text-blue-800'
                  end
                %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full <%= badge_color %> mr-1 mb-1">
                  <%= type.gsub('_anodising', '').gsub('_', ' ').titleize %>
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if @part.alloys.any? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Alloys</dt>
            <dd class="text-sm text-gray-900">
              <% @part.alloys.each do |alloy| %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 mr-1 mb-1">
                  <%= alloy.humanize %>
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if @part.target_thicknesses.any? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Target Thicknesses</dt>
            <dd class="text-sm text-gray-900">
              <% @part.target_thicknesses.each do |thickness| %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 mr-1 mb-1">
                  <%= thickness %>μm
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if @part.anodic_classes.any? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Anodic Classes</dt>
            <dd class="text-sm text-gray-900">
              <% @part.anodic_classes.each do |anodic_class| %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 mr-1 mb-1">
                  <%= anodic_class == 'class_1' ? 'Class 1 (Undyed)' : 'Class 2 (Dyed)' %>
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if @part.selected_enp_heat_treatment.present? && @part.selected_enp_heat_treatment != 'none' %>
          <div>
            <dt class="text-sm font-medium text-gray-500">ENP Post-Heat Treatment</dt>
            <dd class="text-sm text-gray-900">
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">
                <%= @part.selected_enp_heat_treatment.humanize %>
              </span>
            </dd>
          </div>
        <% end %>

        <% if @part.selected_enp_pre_heat_treatment.present? && @part.selected_enp_pre_heat_treatment != 'none' %>
          <div>
            <dt class="text-sm font-medium text-gray-500">ENP Pre-Heat Treatment</dt>
            <dd class="text-sm text-gray-900">
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-amber-100 text-amber-800">
                <%= @part.selected_enp_pre_heat_treatment.humanize %>
              </span>
            </dd>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Special Instructions -->
  <% if @part.special_instructions.present? %>
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Special Instructions</h2>
      <div class="prose max-w-none">
        <%= simple_format(@part.special_instructions) %>
      </div>
    </div>
  <% end %>

  <!-- Recent Works Orders -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Recent Works Orders</h2>
      <% if @part.enabled %>
        <%= link_to "Create Works Order", new_works_order_path(part_id: @part.id),
            class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-sm" %>
      <% end %>
    </div>

    <% if @works_orders.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                WO Number
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Customer Order
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Quantity
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Created
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @works_orders.each do |works_order| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= link_to "WO#{works_order.number}", works_order, class: "text-blue-600 hover:text-blue-900" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= works_order.customer_order.number %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= works_order.quantity_released %>/<%= works_order.quantity %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= works_order.created_at.strftime("%d/%m/%Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if works_order.voided %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                      Voided
                    </span>
                  <% elsif works_order.is_open %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                      Open
                    </span>
                  <% else %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                      Closed
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "View", works_order, class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @part.works_orders.count > 10 %>
        <div class="mt-4 text-center">
          <%= link_to "View all works orders for this part", works_orders_path(part_id: @part.id),
              class: "text-blue-600 hover:text-blue-900" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500">No works orders for this part yet.</p>
        <% if @part.enabled %>
          <%= link_to "Create the first works order", new_works_order_path(part_id: @part.id),
              class: "text-blue-600 hover:text-blue-900 font-medium" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
