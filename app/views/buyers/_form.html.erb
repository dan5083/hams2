<%# app/views/organizations/index.html.erb %>
<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Customer Buyers</h1>
  </div>

  <div class="bg-blue-50 border border-blue-200 rounded-md p-4 mb-6">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">Manage Buyer Contacts</h3>
        <div class="mt-2 text-sm text-blue-700">
          <p>Add buyer email addresses for each customer. When works orders are created, order acknowledgements
          will be sent to these buyers instead of generic accounts@ addresses.</p>
        </div>
      </div>
    </div>
  </div>

  <%# Search and Filter Form %>
  <div class="bg-white shadow-md rounded-lg p-4 mb-6">
    <%= form_with url: organizations_path, method: :get, class: "space-y-4" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <%# Search %>
        <div>
          <%= f.label :search, "Search by Name", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.text_field :search,
              value: params[:search],
              placeholder: "Customer name...",
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <%# Type Filter %>
        <div>
          <%= f.label :type, "Type", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :type,
              options_for_select([
                ['All', ''],
                ['Customers Only', 'customers'],
                ['Suppliers Only', 'suppliers']
              ], params[:type]),
              {},
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <%# Status Filter %>
        <div>
          <%= f.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :status,
              options_for_select([
                ['Enabled', 'enabled'],
                ['Disabled', 'disabled'],
                ['All', '']
              ], params[:status] || 'enabled'),
              {},
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>

        <%# Buyers Filter %>
        <div>
          <%= f.label :buyers, "Buyers", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= f.select :buyers,
              options_for_select([
                ['All', ''],
                ['With Buyers', 'with_buyers'],
                ['Without Buyers', 'without_buyers']
              ], params[:buyers]),
              {},
              class: "w-full rounded-md border-gray-300 shadow-sm focus:border-blue-500 focus:ring-blue-500" %>
        </div>
      </div>

      <div class="flex gap-2">
        <%= f.submit "Filter", class: "bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Clear Filters", organizations_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>

  <%# Results %>
  <% if @organizations.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden mb-4">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Customer
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Buyers Configured
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @organizations.each do |customer| %>
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= customer.name %>
                </div>
                <% if customer.contact_email %>
                  <div class="text-xs text-gray-500">
                    Default: <%= customer.contact_email %>
                  </div>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% buyer_count = customer.buyers.count %>
                <% enabled_buyer_count = customer.buyers.enabled.count %>
                <% if buyer_count > 0 %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    <%= enabled_buyer_count %> active
                  </span>
                  <% if buyer_count != enabled_buyer_count %>
                    <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-600 ml-1">
                      <%= buyer_count - enabled_buyer_count %> disabled
                    </span>
                  <% end %>
                <% else %>
                  <span class="text-xs text-gray-400">No buyers configured</span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                <%= link_to 'ðŸ‘¥ Manage Buyers',
                    organization_buyers_path(customer),
                    class: "text-blue-600 hover:text-blue-900 font-semibold" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <%# Pagination %>
    <div class="flex justify-center">
      <%= paginate @organizations %>
    </div>
  <% else %>
    <div class="bg-white shadow-md rounded-lg p-8 text-center">
      <p class="text-gray-500 mb-4">No organizations found matching your criteria.</p>
      <%= link_to "Clear Filters", organizations_path, class: "text-blue-600 hover:text-blue-800 font-semibold" %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to 'â† Back to Artifacts', artifacts_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>
</div>
