<%# app/views/buyers/index.html.erb %>
<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Buyers for <%= @organization.name %></h1>
      <p class="text-gray-600 mt-2">Manage buyer email addresses for order acknowledgements</p>
    </div>
    <%= link_to new_organization_buyer_path(@organization),
        class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" do %>
      ➕ Add New Buyer
    <% end %>
  </div>

  <% if @buyers.any? %>
    <div class="bg-white shadow-md rounded-lg overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Email
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
              Actions
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @buyers.each do |buyer| %>
            <tr class="<%= 'opacity-50' unless buyer.enabled %>">
              <td class="px-6 py-4 whitespace-nowrap">
                <div class="text-sm font-medium text-gray-900">
                  <%= buyer.email %>
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap">
                <% if buyer.enabled %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">
                    Enabled
                  </span>
                <% else %>
                  <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">
                    Disabled
                  </span>
                <% end %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
                <%= link_to 'Edit',
                    edit_organization_buyer_path(@organization, buyer),
                    class: "text-blue-600 hover:text-blue-900" %>
                <%= button_to buyer.enabled ? 'Disable' : 'Enable',
                    toggle_enabled_organization_buyer_path(@organization, buyer),
                    method: :patch,
                    class: "text-yellow-600 hover:text-yellow-900",
                    form: { style: "display: inline;" } %>
                <%= button_to 'Delete',
                    organization_buyer_path(@organization, buyer),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this buyer?" },
                    class: "text-red-600 hover:text-red-900",
                    form: { style: "display: inline;" } %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="bg-white shadow-md rounded-lg p-8 text-center">
      <p class="text-gray-500 mb-4">No buyers configured for this organization yet.</p>
      <%= link_to new_organization_buyer_path(@organization),
          class: "bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded inline-block" do %>
        ➕ Add First Buyer
      <% end %>
    </div>
  <% end %>

  <div class="mt-6">
    <%= link_to '← Back to Artifacts', artifacts_path, class: "text-blue-600 hover:text-blue-800" %>
  </div>

  <!-- Information Box -->
  <div class="mt-6 bg-blue-50 border border-blue-200 rounded-md p-4">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">About Buyers</h3>
        <div class="mt-2 text-sm text-blue-700">
          <p>Buyers are individuals at <%= @organization.name %> who will receive order acknowledgement emails
          when works orders are created. Add buyer email addresses here to send order confirmations to the
          right people instead of generic accounts@ addresses.</p>
        </div>
      </div>
    </div>
  </div>
</div>
