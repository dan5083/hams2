<%= form_with model: release_level, local: true, class: "space-y-6" do |form| %>
  <% if release_level.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4">
      <ul class="list-disc list-inside text-red-700">
        <% release_level.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white shadow rounded-lg p-6">
    <div class="space-y-4">
      <div>
        <%= form.label :name, "Name (on dropdown)", class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :name, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2", required: true %>
      </div>

      <div>
        <%= form.label :statement, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_area :statement, rows: 4, class: "mt-1 block w-full border border-gray-300 rounded-md px-3 py-2", required: true %>
      </div>

      <% if release_level.persisted? %>
        <div>
          <%= form.check_box :enabled, class: "rounded border-gray-300" %>
          <%= form.label :enabled, "Enabled", class: "ml-2 text-sm text-gray-900" %>
        </div>
      <% end %>
    </div>

    <div class="mt-6 flex justify-end space-x-3">
      <%= link_to "Cancel", release_levels_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      <%= form.submit class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>
<% end %>
