<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="mb-6">
    <%= link_to specifications_path, class: "inline-flex items-center text-sm font-medium text-gray-500 hover:text-gray-700" do %>
      <svg class="mr-2 h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to Specifications
    <% end %>
  </div>

  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-900">New Specification</h1>
    <p class="mt-2 text-sm text-gray-600">
      Create a new specification document. Choose between QS (Quality System) or Non-QS type.
    </p>
  </div>

  <%= render "form", specification: @specification %>
</div>
