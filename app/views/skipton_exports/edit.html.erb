<div class="max-w-2xl mx-auto p-6">
  <div class="bg-white rounded-lg shadow-md p-6">
    <div class="mb-6">
      <h1 class="text-2xl font-bold">Edit Mapping</h1>
      <p class="text-sm text-gray-600 mt-1">Update customer mapping details</p>
    </div>

    <%= form_with model: @mapping, url: skipton_mapping_path(@mapping), method: :patch, class: "space-y-4" do |f| %>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Xero Customer Name <span class="text-red-500">*</span>
        </label>
        <%= f.text_field :xero_name,
                        required: true,
                        class: "w-full px-4 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <p class="text-xs text-gray-600 mt-1">
          Must match exactly what appears in Xero invoices
        </p>
      </div>

      <div>
        <label class="block text-sm font-medium text-gray-700 mb-2">
          Skipton ID <span class="text-red-500">*</span>
        </label>
        <%= f.text_field :skipton_id,
                        required: true,
                        class: "w-full px-4 py-2 border border-gray-300 rounded font-mono focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <p class="text-xs text-gray-600 mt-1">
          The customer's ID in Skipton Business Finance
        </p>
      </div>

      <div class="flex gap-3 pt-4">
        <%= f.submit "Update Mapping",
                     class: "px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 font-medium cursor-pointer" %>
        <%= link_to "Cancel", skipton_mappings_path,
                    class: "px-6 py-2 bg-gray-200 text-gray-700 rounded hover:bg-gray-300 font-medium" %>
      </div>
    <% end %>

    <% if @mapping.persisted? %>
      <div class="mt-6 pt-6 border-t">
        <p class="text-sm text-gray-600 mb-2">Danger zone:</p>
        <%= button_to "Delete this mapping",
                      skipton_mapping_path(@mapping),
                      method: :delete,
                      data: { confirm: "Are you sure? This will cause export errors for invoices using '#{@mapping.xero_name}'" },
                      class: "px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700 text-sm font-medium" %>
      </div>
    <% end %>
  </div>
</div>
