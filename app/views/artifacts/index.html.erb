<%# app/views/artifacts/index.html.erb %>
<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Artifacts Management</h1>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Release Levels Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Release Levels</h2>
      <p class="text-gray-600 mb-4">Manage release level types and statements.</p>

      <div class="space-y-2 text-sm mb-4">
        <div><strong>Total:</strong> <%= @release_levels_count %></div>
        <div><strong>Enabled:</strong> <%= @enabled_release_levels_count %></div>
        <div><strong>Disabled:</strong> <%= @release_levels_count - @enabled_release_levels_count %></div>
      </div>

      <div class="space-y-2">
        <%= link_to release_levels_path,
            class: "block w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-sm text-center" do %>
          ðŸ“‹ Manage Release Levels
        <% end %>

        <%= link_to new_release_level_path,
            class: "block w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-sm text-center" do %>
          âž• Add New Release Level
        <% end %>
      </div>
    </div>

    <!-- Transport Methods Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Transport Methods</h2>
      <p class="text-gray-600 mb-4">Manage delivery and transport options.</p>

      <div class="space-y-2 text-sm mb-4">
        <div><strong>Total:</strong> <%= @transport_methods_count %></div>
        <div><strong>Enabled:</strong> <%= @enabled_transport_methods_count %></div>
        <div><strong>Disabled:</strong> <%= @transport_methods_count - @enabled_transport_methods_count %></div>
      </div>

      <div class="space-y-2">
        <%= link_to transport_methods_path,
            class: "block w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-sm text-center" do %>
          ðŸšš Manage Transport Methods
        <% end %>

        <%= link_to new_transport_method_path,
            class: "block w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-sm text-center" do %>
          âž• Add New Transport Method
        <% end %>
      </div>
    </div>

    <!-- Specification Presets Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Specification Presets</h2>
      <p class="text-gray-600 mb-4">Manage treatment specification templates.</p>

      <div class="space-y-2 text-sm mb-4">
        <div><strong>Total:</strong> <%= @specification_presets_count %></div>
        <div><strong>Enabled:</strong> <%= @enabled_specification_presets_count %></div>
        <div><strong>Disabled:</strong> <%= @specification_presets_count - @enabled_specification_presets_count %></div>
      </div>

      <div class="space-y-2">
        <%= link_to specification_presets_path(t: Time.current.to_i),
            class: "block w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-sm text-center" do %>
          ðŸ“„ Manage Specifications
        <% end %>

        <%= link_to new_specification_preset_path(t: Time.current.to_i),
            class: "block w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-sm text-center" do %>
          âž• Add New Specification
        <% end %>
      </div>
    </div>

    <!-- Additional Charge Presets Card -->
    <div class="bg-white rounded-lg shadow-md p-6">
      <h2 class="text-xl font-semibold text-gray-800 mb-4">Additional Charges</h2>
      <p class="text-gray-600 mb-4">Manage additional charge presets and rates.</p>

      <div class="space-y-2 text-sm mb-4">
        <div><strong>Total:</strong> <%= @additional_charge_presets_count %></div>
        <div><strong>Enabled:</strong> <%= @enabled_additional_charge_presets_count %></div>
        <div><strong>Disabled:</strong> <%= @additional_charge_presets_count - @enabled_additional_charge_presets_count %></div>
      </div>

      <div class="space-y-2">
        <%= link_to additional_charge_presets_path(t: Time.current.to_i),
            class: "block w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-sm text-center" do %>
          ðŸ’° Manage Charges
        <% end %>

        <%= link_to new_additional_charge_preset_path(t: Time.current.to_i),
            class: "block w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-sm text-center" do %>
          âž• Add New Charge
        <% end %>
      </div>
    </div>
  </div>

  <!-- Information Box -->
  <div class="mt-6 bg-blue-50 border border-blue-200 rounded-md p-4">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">About Artifacts Management</h3>
        <div class="mt-2 text-sm text-blue-700">
          <p>This page provides centralized access to manage all system reference data including
          release levels, transport methods, specification presets, and additional charges.
          Use these tools to maintain the reference data used throughout the application.</p>
        </div>
      </div>
    </div>
  </div>
</div>
