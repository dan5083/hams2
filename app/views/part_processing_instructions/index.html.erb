<%# app/views/part_processing_instructions/index.html.erb %>
<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Part Processing Instructions</h1>
    <%= link_to "New PPI", new_part_processing_instruction_path,
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <!-- Filters -->
  <div class="bg-white p-4 rounded-lg shadow mb-6">
    <%= form_with url: part_processing_instructions_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      <div>
        <%= form.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :search,
            value: params[:search],
            placeholder: "Part number, description...",
            class: "border border-gray-300 rounded-md px-3 py-2 w-48" %>
      </div>

      <div>
        <%= form.label :customer_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :customer_id,
            options_for_select([['All Customers', '']] + @customers.map { |c| [c.name, c.id] }, params[:customer_id]),
            {},
            { class: "border border-gray-300 rounded-md px-3 py-2 w-48" } %>
      </div>

      <div>
        <%= form.submit "Filter", class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Clear", part_processing_instructions_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded ml-2" %>
      </div>
    <% end %>
  </div>

  <!-- PPIs Table -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Part Number
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Customer
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Operations
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Process Details
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Works Orders
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @ppis.each do |ppi| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= link_to ppi.display_name, ppi, class: "text-blue-600 hover:text-blue-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= ppi.customer.name %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900">
              <% if ppi.selected_operations.any? %>
                <div class="space-y-1">
                  <% ppi.get_operations.each_with_index do |operation, index| %>
                    <% if operation %>
                      <div class="text-xs">
                        <span class="font-medium text-blue-600"><%= index + 1 %>.</span>
                        <span class="text-gray-700"><%= operation.display_name %></span>
                      </div>
                    <% end %>
                  <% end %>
                </div>
              <% else %>
                <span class="text-gray-400 text-xs">No operations selected</span>
              <% end %>
            </td>
            <td class="px-6 py-4 text-sm text-gray-900">
              <div class="space-y-1">
                <!-- Anodising Types -->
                <% if ppi.anodising_types.any? %>
                  <div class="flex flex-wrap gap-1">
                    <% ppi.anodising_types.each do |type| %>
                      <span class="inline-flex px-1.5 py-0.5 text-xs font-medium rounded bg-blue-100 text-blue-800">
                        <%= type.gsub('_anodising', '').capitalize %>
                      </span>
                    <% end %>
                  </div>
                <% end %>

                <!-- Target Thicknesses -->
                <% if ppi.target_thicknesses.any? %>
                  <div class="flex flex-wrap gap-1">
                    <% ppi.target_thicknesses.each do |thickness| %>
                      <span class="inline-flex px-1.5 py-0.5 text-xs font-medium rounded bg-yellow-100 text-yellow-800">
                        <%= thickness %>Î¼m
                      </span>
                    <% end %>
                  </div>
                <% end %>

                <!-- Alloys -->
                <% if ppi.alloys.any? %>
                  <div class="flex flex-wrap gap-1">
                    <% ppi.alloys.first(2).each do |alloy| %>
                      <span class="inline-flex px-1.5 py-0.5 text-xs font-medium rounded bg-green-100 text-green-800">
                        <%= alloy.humanize %>
                      </span>
                    <% end %>
                    <% if ppi.alloys.length > 2 %>
                      <span class="inline-flex px-1.5 py-0.5 text-xs font-medium rounded bg-gray-100 text-gray-600">
                        +<%= ppi.alloys.length - 2 %> more
                      </span>
                    <% end %>
                  </div>
                <% end %>

                <!-- Fallback to process type if no operations -->
                <% if ppi.selected_operations.empty? && ppi.process_type.present? %>
                  <span class="inline-flex px-2 py-1 text-xs font-medium rounded bg-gray-100 text-gray-800">
                    <%= ppi.process_type.humanize %>
                  </span>
                <% end %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= ppi.works_orders.active.count %>
              <% if ppi.works_orders.count != ppi.works_orders.active.count %>
                (<%= ppi.works_orders.count %> total)
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if ppi.enabled %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Enabled
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                  Disabled
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to "View", ppi, class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "Edit", edit_part_processing_instruction_path(ppi), class: "text-yellow-600 hover:text-yellow-900" %>
                <%= button_to ppi.enabled? ? "Disable" : "Enable",
                    toggle_enabled_part_processing_instruction_path(ppi),
                    method: :patch,
                    form: {
                      class: "inline",
                      data: { confirm: "Are you sure you want to #{ppi.enabled? ? 'disable' : 'enable'} this PPI?" }
                    },
                    class: ppi.enabled? ? "text-red-600 hover:text-red-900" : "text-green-600 hover:text-green-900" %>
                <% if ppi.can_be_deleted? %>
                  <%= button_to "Delete", part_processing_instruction_path(ppi),
                      method: :delete,
                      form: {
                        class: "inline",
                        data: { confirm: "Are you sure you want to delete this PPI? This cannot be undone." }
                      },
                      class: "text-red-600 hover:text-red-900" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @ppis.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No part processing instructions found.</p>
        <%= link_to "Create your first PPI", new_part_processing_instruction_path,
            class: "text-blue-600 hover:text-blue-900 font-medium" %>
      </div>
    <% end %>
  </div>

  <!-- Info Box -->
  <div class="mt-6 bg-blue-50 border border-blue-200 rounded-md p-4">
    <div class="flex">
      <div class="ml-3">
        <h3 class="text-sm font-medium text-blue-800">About Part Processing Instructions</h3>
        <div class="mt-2 text-sm text-blue-700">
          <p>Part Processing Instructions (PPIs) now use operation-based selection. Choose your anodising criteria
          and select up to 3 operations in sequence. The specification is automatically generated from your selections,
          giving you precise control over the manufacturing process.</p>
        </div>
      </div>
    </div>
  </div>
</div>
