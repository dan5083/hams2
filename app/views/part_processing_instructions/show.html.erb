<%# app/views/part_processing_instructions/show.html.erb %>
<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">PPI: <%= @ppi.display_name %></h1>
    <div class="flex space-x-2">
      <%= link_to "Edit", edit_part_processing_instruction_path(@ppi),
          class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to @ppi.enabled? ? "Disable" : "Enable",
          toggle_enabled_part_processing_instruction_path(@ppi),
          method: :patch,
          class: @ppi.enabled? ? "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" : "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded",
          data: { confirm: "Are you sure you want to #{@ppi.enabled? ? 'disable' : 'enable'} this PPI?" } %>
      <%= link_to "View Part", @ppi.part,
          class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to PPIs", part_processing_instructions_path,
          class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- PPI Details -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">PPI Details</h2>

      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Customer</dt>
          <dd class="text-sm text-gray-900"><%= @ppi.customer.name %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Part Number</dt>
          <dd class="text-sm text-gray-900 font-mono"><%= @ppi.part_number %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Part Issue</dt>
          <dd class="text-sm text-gray-900 font-mono"><%= @ppi.part_issue %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Part Description</dt>
          <dd class="text-sm text-gray-900"><%= @ppi.part_description %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Process Type</dt>
          <dd class="text-sm text-gray-900"><%= @ppi.process_type&.humanize %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="text-sm">
            <% if @ppi.enabled %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                Enabled
              </span>
            <% else %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                Disabled
              </span>
            <% end %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Created</dt>
          <dd class="text-sm text-gray-900"><%= @ppi.created_at.strftime("%d/%m/%Y %H:%M") %></dd>
        </div>
      </dl>
    </div>

    <!-- Usage Summary -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Usage Summary</h2>

      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Associated Part</dt>
          <dd class="text-sm text-gray-900">
            <%= link_to @ppi.part.display_name, @ppi.part, class: "text-blue-600 hover:text-blue-900" %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Total Works Orders</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= @ppi.works_orders.count %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Active Works Orders</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= @ppi.works_orders.active.count %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Open Works Orders</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= @ppi.works_orders.open.count %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Can be deleted?</dt>
          <dd class="text-sm">
            <% if @ppi.can_be_deleted? %>
              <span class="text-green-600">✓ Yes</span>
            <% else %>
              <span class="text-red-600">✗ No (has works orders)</span>
            <% end %>
          </dd>
        </div>
      </dl>

      <% if @ppi.can_be_deleted? %>
        <div class="mt-4 pt-4 border-t border-gray-200">
          <%= button_to "Delete PPI", part_processing_instruction_path(@ppi),
              method: :delete,
              class: "bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded text-sm",
              form: { data: { confirm: "Are you sure you want to delete this PPI? This cannot be undone." } } %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Selected Operations -->
  <% if @ppi.selected_operations.any? %>
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Selected Operations</h2>

      <div class="space-y-4">
        <% @ppi.get_operations.each_with_index do |operation, index| %>
          <% if operation %>
            <div class="border border-gray-200 rounded-lg p-4 bg-gray-50">
              <div class="flex justify-between items-start mb-2">
                <h3 class="font-medium text-gray-900">
                  Operation <%= index + 1 %>: <%= operation.display_name %>
                </h3>
                <% if operation.vat_numbers.any? %>
                  <span class="text-xs text-gray-500"><%= operation.vat_options_text %></span>
                <% end %>
              </div>

              <p class="text-sm text-gray-700 mb-2"><%= simple_format(operation.operation_text) %></p>

              <!-- Show specifications for chemical conversion -->
              <% if operation.specifications.present? %>
                <div class="mb-2">
                  <span class="text-xs font-medium text-purple-600">Specifications:</span>
                  <span class="text-xs text-purple-700"><%= operation.specifications %></span>
                </div>
              <% end %>

              <div class="flex flex-wrap gap-2 text-xs text-gray-500">
                <% if operation.target_thickness > 0 %>
                  <span class="bg-yellow-100 text-yellow-800 px-2 py-1 rounded">Target: <%= operation.target_thickness %>μm</span>
                <% end %>
                <span class="bg-blue-100 text-blue-800 px-2 py-1 rounded">Type: <%= operation.process_type.humanize %></span>
                <% if operation.alloys.any? %>
                  <span class="bg-green-100 text-green-800 px-2 py-1 rounded">Alloys: <%= operation.alloys.join(', ') %></span>
                <% end %>
                <% if operation.anodic_classes.any? %>
                  <span class="bg-purple-100 text-purple-800 px-2 py-1 rounded">Classes: <%= operation.anodic_classes.join(', ') %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Operation Selection Criteria -->
  <% if @ppi.operation_selection.any? %>
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Operation Selection Criteria</h2>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
        <% if @ppi.anodising_types.any? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Treatment Types</dt>
            <dd class="text-sm text-gray-900">
              <% @ppi.anodising_types.each do |type| %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800 mr-1 mb-1">
                  <%= type.humanize %>
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if @ppi.alloys.any? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Alloys</dt>
            <dd class="text-sm text-gray-900">
              <% @ppi.alloys.each do |alloy| %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800 mr-1 mb-1">
                  <%= alloy.humanize %>
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if @ppi.target_thicknesses.any? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Target Thicknesses</dt>
            <dd class="text-sm text-gray-900">
              <% @ppi.target_thicknesses.each do |thickness| %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800 mr-1 mb-1">
                  <%= thickness %>μm
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>

        <% if @ppi.anodic_classes.any? %>
          <div>
            <dt class="text-sm font-medium text-gray-500">Anodic Classes</dt>
            <dd class="text-sm text-gray-900">
              <% @ppi.anodic_classes.each do |anodic_class| %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-purple-100 text-purple-800 mr-1 mb-1">
                  <%= anodic_class == 'class_1' ? 'Class 1 (Undyed)' : 'Class 2 (Dyed)' %>
                </span>
              <% end %>
            </dd>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Specification -->
  <div class="bg-white shadow rounded-lg p-6 mb-6">
    <h2 class="text-xl font-semibold text-gray-900 mb-4">Specification</h2>
    <% if @ppi.specification.present? %>
      <div class="prose max-w-none">
        <%= simple_format(@ppi.specification) %>
      </div>
    <% else %>
      <p class="text-gray-500 italic">No specification provided</p>
    <% end %>
  </div>

  <!-- Special Instructions -->
  <% if @ppi.special_instructions.present? %>
    <div class="bg-white shadow rounded-lg p-6 mb-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Special Instructions</h2>
      <div class="prose max-w-none">
        <%= simple_format(@ppi.special_instructions) %>
      </div>
    </div>
  <% end %>

  <!-- Recent Works Orders -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Recent Works Orders</h2>
      <% if @ppi.enabled %>
        <%= link_to "Create Works Order", new_works_order_path(ppi_id: @ppi.id),
            class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded text-sm" %>
      <% end %>
    </div>

    <% if @works_orders.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                WO Number
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Customer Order
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Quantity
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Created
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @works_orders.each do |works_order| %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= link_to "WO#{works_order.number}", works_order, class: "text-blue-600 hover:text-blue-900" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= works_order.customer_order.number %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= works_order.quantity_released %>/<%= works_order.quantity %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= works_order.created_at.strftime("%d/%m/%Y") %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if works_order.voided %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                      Voided
                    </span>
                  <% elsif works_order.is_open %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                      Open
                    </span>
                  <% else %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                      Closed
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <%= link_to "View", works_order, class: "text-blue-600 hover:text-blue-900" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% if @ppi.works_orders.count > 10 %>
        <div class="mt-4 text-center">
          <%= link_to "View all works orders for this PPI", works_orders_path(ppi_id: @ppi.id),
              class: "text-blue-600 hover:text-blue-900" %>
        </div>
      <% end %>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500">No works orders for this PPI yet.</p>
        <% if @ppi.enabled %>
          <%= link_to "Create the first works order", new_works_order_path(ppi_id: @ppi.id),
              class: "text-blue-600 hover:text-blue-900 font-medium" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
