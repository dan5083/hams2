<%# app/views/specification_presets/index.html.erb %>
<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Specification Presets</h1>
    <div class="flex space-x-2">
      <%= link_to "New Specification Preset", new_specification_preset_path,
          class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to Artifacts", artifacts_path,
          class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Name
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Content Preview
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @specification_presets.each do |specification_preset| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= specification_preset.name %>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="text-sm text-gray-900 max-w-md truncate">
                <%= specification_preset.content %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if specification_preset.enabled %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Enabled
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                  Disabled
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to "Edit", edit_specification_preset_path(specification_preset),
                    class: "text-blue-600 hover:text-blue-900" %>

                <% if specification_preset.enabled %>
                  <%= link_to "Disable", toggle_enabled_specification_preset_path(specification_preset),
                      method: :patch,
                      class: "text-yellow-600 hover:text-yellow-900",
                      data: { confirm: "Are you sure you want to disable this specification preset?" } %>
                <% else %>
                  <%= link_to "Enable", toggle_enabled_specification_preset_path(specification_preset),
                      method: :patch,
                      class: "text-green-600 hover:text-green-900",
                      data: { confirm: "Are you sure you want to enable this specification preset?" } %>
                <% end %>

                <% if specification_preset.can_be_deleted? %>
                  <%= link_to "Delete", specification_preset_path(specification_preset),
                      method: :delete,
                      class: "text-red-600 hover:text-red-900",
                      data: { confirm: "Are you sure you want to delete this specification preset?" } %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @specification_presets.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No specification presets found.</p>
        <%= link_to "Create your first specification preset", new_specification_preset_path,
            class: "text-blue-600 hover:text-blue-800 underline" %>
      </div>
    <% end %>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Total Presets</h3>
      <p class="text-2xl font-bold text-gray-900"><%= @specification_presets.count %></p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Enabled</h3>
      <p class="text-2xl font-bold text-green-600">
        <%= @specification_presets.enabled.count %>
      </p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Disabled</h3>
      <p class="text-2xl font-bold text-red-600">
        <%= @specification_presets.disabled.count %>
      </p>
    </div>
  </div>
</div>
