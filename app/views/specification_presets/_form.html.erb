<%# app/views/specification_presets/_form.html.erb %>
<div class="bg-white shadow rounded-lg p-6">
  <%= form_with(model: specification_preset, local: true, class: "space-y-6") do |form| %>
    <% if specification_preset.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              <%= pluralize(specification_preset.errors.count, "error") %> prohibited this specification preset from being saved:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% specification_preset.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <div>
      <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_field :name,
          placeholder: "e.g., DEF STAN 03-24, MIL-DTL-5541F, etc.",
          class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
          required: true %>
      <p class="mt-1 text-xs text-gray-500">Enter the specification standard name or reference</p>
    </div>

    <div>
      <%= form.label :content, "Specification Content", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= form.text_area :content,
          rows: 6,
          placeholder: "Enter the detailed specification requirements and standards...",
          class: "mt-1 block w-full border border-gray-300 rounded-md shadow-sm py-2 px-3 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
          required: true %>
      <p class="mt-1 text-xs text-gray-500">Detailed specification text that will be used in documentation and processes</p>
    </div>

    <div class="flex items-center">
      <%= form.check_box :enabled,
          class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
      <%= form.label :enabled, "Enabled",
          class: "ml-2 block text-sm text-gray-900" %>
      <p class="ml-2 text-xs text-gray-500">(Disabled specifications won't be available for selection)</p>
    </div>

    <div class="flex justify-end space-x-3">
      <%= link_to "Cancel", specification_presets_path,
          class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      <%= form.submit specification_preset.persisted? ? "Update Specification Preset" : "Create Specification Preset",
          class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  <% end %>
</div>
