<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Customer Order: <%= @customer_order.number %></h1>
    <div class="flex space-x-2">
      <% unless @customer_order.voided %>
        <%= link_to "Edit", edit_customer_order_path(@customer_order),
            class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Add Works Order", new_customer_order_works_order_path(@customer_order),
            class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
        <% if @customer_order.can_be_voided? %>
          <%= link_to "Void Order", void_customer_order_path(@customer_order),
              method: :patch,
              class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded",
              data: { confirm: "Are you sure you want to void this customer order? This cannot be undone." } %>
        <% end %>
      <% end %>
      <%= link_to "Back to Orders", customer_orders_path,
          class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <%
    # Calculate invoicing status for this customer order
    uninvoiced_release_notes = ReleaseNote.joins(:works_order)
                                         .where(works_orders: { customer_order_id: @customer_order.id })
                                         .requires_invoicing

    invoiced_release_notes = ReleaseNote.joins(:works_order)
                                       .where(works_orders: { customer_order_id: @customer_order.id })
                                       .joins(:invoice_item)

    uninvoiced_count = uninvoiced_release_notes.sum(:quantity_accepted)
    invoiced_count = invoiced_release_notes.sum(:quantity_accepted)
    total_released = @customer_order.works_orders.active.sum(:quantity_released)

    uninvoiced_works_orders = @customer_order.works_orders
                                            .joins(:release_notes)
                                            .merge(ReleaseNote.requires_invoicing)
                                            .distinct.count
  %>

  <!-- Invoicing Status Card (Prominent) -->
  <% if total_released > 0 %>
    <div class="bg-white border-l-4 <%= uninvoiced_count > 0 ? 'border-orange-400 bg-orange-50' : 'border-green-400 bg-green-50' %> p-6 mb-6 rounded-lg shadow">
      <div class="flex justify-between items-start">
        <div>
          <h2 class="text-xl font-semibold <%= uninvoiced_count > 0 ? 'text-orange-800' : 'text-green-800' %> mb-2">
            Invoicing Status
          </h2>

          <% if uninvoiced_count > 0 %>
            <p class="text-orange-700 mb-3">
              <span class="font-bold"><%= uninvoiced_count %> parts</span> across
              <span class="font-bold"><%= uninvoiced_works_orders %> works order<%= uninvoiced_works_orders == 1 ? '' : 's' %></span>
              are ready to be invoiced.
            </p>

            <div class="text-sm text-orange-600 space-y-1">
              <div>• Uninvoiced release notes: <%= uninvoiced_release_notes.count %></div>
              <% if invoiced_count > 0 %>
                <div>• Previously invoiced: <%= invoiced_count %> parts</div>
              <% end %>
            </div>
          <% else %>
            <p class="text-green-700 mb-3">
              All <span class="font-bold"><%= total_released %> released parts</span> have been invoiced.
            </p>

            <div class="text-sm text-green-600">
              • Total invoiced release notes: <%= invoiced_release_notes.count %>
            </div>
          <% end %>
        </div>

        <% if uninvoiced_count > 0 && !@customer_order.voided %>
          <div class="ml-4">
            <%= button_to "Create Invoice", create_invoice_customer_order_path(@customer_order),
                method: :patch,
                class: "bg-orange-500 hover:bg-orange-700 text-white font-bold py-3 px-6 rounded-lg text-lg",
                data: { confirm: "Create invoice for customer order #{@customer_order.number}?\n\nThis will invoice:\n• #{uninvoiced_count} parts\n• #{uninvoiced_release_notes.count} release notes\n• #{uninvoiced_works_orders} works order#{ uninvoiced_works_orders == 1 ? '' : 's'}" } %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-6">
    <!-- Order Details -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Order Details</h2>

      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Customer</dt>
          <dd class="text-sm text-gray-900"><%= @customer_order.customer.name %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Order Number</dt>
          <dd class="text-sm text-gray-900"><%= @customer_order.number %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Date Received</dt>
          <dd class="text-sm text-gray-900"><%= @customer_order.date_received.strftime("%d/%m/%Y") %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="text-sm">
            <% if @customer_order.voided %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                Voided
              </span>
            <% elsif @customer_order.outstanding? %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                Outstanding
              </span>
            <% else %>
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                Complete
              </span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>

    <!-- Summary Statistics -->
    <div class="bg-white shadow rounded-lg p-6">
      <h2 class="text-xl font-semibold text-gray-900 mb-4">Order Summary</h2>

      <dl class="space-y-3">
        <div>
          <dt class="text-sm font-medium text-gray-500">Total Works Orders</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= @customer_order.works_orders.count %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Active Works Orders</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= @customer_order.works_orders.active.count %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Open Works Orders</dt>
          <dd class="text-sm text-gray-900 font-semibold <%= @customer_order.works_orders.open.count > 0 ? 'text-orange-600' : 'text-green-600' %>">
            <%= @customer_order.works_orders.open.count %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Total Quantity</dt>
          <dd class="text-sm text-gray-900 font-semibold"><%= @customer_order.total_quantity %></dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Total Released</dt>
          <dd class="text-sm text-gray-900 font-semibold <%= total_released > 0 ? 'text-green-600' : 'text-gray-500' %>">
            <%= total_released %>
          </dd>
        </div>

        <div>
          <dt class="text-sm font-medium text-gray-500">Total Value</dt>
          <dd class="text-sm text-gray-900 font-semibold text-lg">£<%= sprintf("%.2f", @customer_order.total_value) %></dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Works Orders -->
  <div class="bg-white shadow rounded-lg p-6">
    <div class="flex justify-between items-center mb-4">
      <h2 class="text-xl font-semibold text-gray-900">Works Orders</h2>
      <% unless @customer_order.voided %>
        <%= link_to "Add Works Order", new_customer_order_works_order_path(@customer_order),
            class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-sm" %>
      <% end %>
    </div>

    <% if @works_orders.any? %>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                WO Number
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Part Number
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Quantity
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Progress
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Invoice Status
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Status
              </th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Actions
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            <% @works_orders.each do |works_order| %>
              <%
                wo_uninvoiced = works_order.release_notes.requires_invoicing.sum(:quantity_accepted)
                wo_invoiced = works_order.release_notes.joins(:invoice_item).sum(:quantity_accepted)
              %>
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                  <%= link_to "WO#{works_order.number}", works_order, class: "text-blue-600 hover:text-blue-900" %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= works_order.part_number %>-<%= works_order.part_issue %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <%= works_order.quantity %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <% if works_order.quantity_released > 0 %>
                    <span class="text-green-600 font-medium">
                      <%= works_order.quantity_released %> released
                    </span>
                    <% if works_order.quantity_remaining > 0 %>
                      <span class="text-gray-500">
                        (<%= works_order.quantity_remaining %> remaining)
                      </span>
                    <% end %>
                  <% else %>
                    <span class="text-gray-500">Not started</span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm">
                  <% if wo_uninvoiced > 0 %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">
                      <%= wo_uninvoiced %> ready
                    </span>
                  <% elsif wo_invoiced > 0 %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                      <%= wo_invoiced %> invoiced
                    </span>
                  <% else %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                      None yet
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <% if works_order.voided %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                      Voided
                    </span>
                  <% elsif works_order.is_open %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                      Open
                    </span>
                  <% else %>
                    <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                      Closed
                    </span>
                  <% end %>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                  <div class="flex space-x-2">
                    <%= link_to "View", works_order, class: "text-blue-600 hover:text-blue-900" %>
                    <% unless works_order.voided %>
                      <%= link_to "Edit", edit_works_order_path(works_order), class: "text-yellow-600 hover:text-yellow-900" %>
                      <%= link_to "Route Card", route_card_works_order_path(works_order),
                          class: "text-green-600 hover:text-green-900", target: "_blank" %>
                    <% end %>
                  </div>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    <% else %>
      <div class="text-center py-8">
        <p class="text-gray-500">No works orders yet.</p>
        <% unless @customer_order.voided %>
          <%= link_to "Create the first works order", new_customer_order_works_order_path(@customer_order),
              class: "text-blue-600 hover:text-blue-900 font-medium" %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
