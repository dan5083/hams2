<!-- app/views/customer_orders/index.html.erb -->
<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Customer Orders</h1>
    <%= link_to "New Customer Order", new_customer_order_path,
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <!-- Filters -->
  <div class="bg-white p-4 rounded-lg shadow mb-6">
    <%= form_with url: customer_orders_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>

      <!-- Search Field -->
      <div class="flex-1 min-w-64">
        <%= form.label :search, "Search", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :search,
            value: params[:search],
            placeholder: "Search by order number or customer name...",
            autocomplete: "off",
            class: "w-full border border-gray-300 rounded-md px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" %>
      </div>

      <div>
        <%= form.label :customer_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :customer_id,
            options_for_select([['All Customers', '']] + @customers.map { |c| [c.name, c.id] }, params[:customer_id]),
            {},
            { class: "border border-gray-300 rounded-md px-3 py-2 w-48" } %>
      </div>

      <div class="flex gap-2">
        <%= form.submit "Filter", class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Clear", customer_orders_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" %>
      </div>
    <% end %>
  </div>

  <!-- Results Summary -->
  <div class="mb-4">
    <p class="text-sm text-gray-600">
      Showing <%= @customer_orders.count %> of <%= @customer_orders.total_count %> customer orders
      <% if params[:search].present? %>
        matching "<%= params[:search] %>"
      <% end %>
      <% if params[:customer_id].present? %>
        for <%= @customers.find { |c| c.id.to_s == params[:customer_id] }&.name %>
      <% end %>
      <% if params[:status].present? %>
        with status "<%= params[:status] %>"
      <% end %>
    </p>
  </div>

  <!-- Customer Orders Table -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Order Number
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Customer
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Date Received
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Works Orders
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Total Value
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Invoice Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @customer_orders.each do |customer_order| %>
          <%
            # OPTIMIZED: Use cached columns instead of queries
            all_works_orders_fully_released = customer_order.open_works_orders_count > 0 &&
                                               customer_order.fully_released_works_orders_count == customer_order.open_works_orders_count
            uninvoiced_count = customer_order.uninvoiced_accepted_quantity
            has_uninvoiced = uninvoiced_count > 0
            show_create_invoice = all_works_orders_fully_released && has_uninvoiced

            # Load works_orders once for the display (already eager loaded)
            works_orders = customer_order.works_orders.active
            fully_released_wo_count = customer_order.fully_released_works_orders_count
          %>
          <tr class="hover:bg-gray-50 <%= 'bg-green-50' if all_works_orders_fully_released %>">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= link_to customer_order.number, customer_order, class: "text-blue-600 hover:text-blue-900" %>
              <% if all_works_orders_fully_released %>
                <span class="ml-2 inline-flex items-center px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                  Ready
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= customer_order.customer.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= customer_order.date_received.strftime("%d/%m/%Y") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= customer_order.works_orders.count %>
              <% if customer_order.works_orders.active.count != customer_order.works_orders.count %>
                (<%= customer_order.works_orders.active.count %> active)
              <% end %>
              <% if all_works_orders_fully_released %>
                <br><span class="text-xs text-green-600">All WOs complete</span>
              <% elsif fully_released_wo_count > 0 %>
                <br><span class="text-xs text-orange-600"><%= fully_released_wo_count %>/<%= works_orders.count %> complete</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              Â£<%= sprintf("%.2f", customer_order.total_value) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if customer_order.voided %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                  Voided
                </span>
              <% elsif all_works_orders_fully_released && has_uninvoiced %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Ready to Invoice (<%= uninvoiced_count %> parts)
                </span>
              <% elsif all_works_orders_fully_released && !has_uninvoiced %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                  Fully invoiced
                </span>
              <% elsif has_uninvoiced %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">
                  Partial Release (<%= uninvoiced_count %> parts)
                </span>
              <% elsif customer_order.works_orders.active.sum(:quantity_released) > 0 %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                  In Progress - Invoiced to Date
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                  No releases yet
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to "View", customer_order, class: "text-blue-600 hover:text-blue-900" %>
                <% unless customer_order.voided %>
                  <%= link_to "Edit", edit_customer_order_path(customer_order), class: "text-yellow-600 hover:text-yellow-900" %>
                  <%= link_to "Add WO", new_customer_order_works_order_path(customer_order), class: "text-green-600 hover:text-green-900" %>

                  <% if show_create_invoice %>
                    <%= button_to "Create Invoice", create_invoice_customer_order_path(customer_order),
                        method: :patch,
                        class: "text-green-600 hover:text-green-900 bg-transparent border-0 underline cursor-pointer text-sm font-semibold",
                        data: { confirm: "Create invoice for customer order #{customer_order.number} (all works orders complete, #{uninvoiced_count} parts ready)?" } %>
                  <% end %>

                  <% if customer_order.can_be_voided? %>
                    <%= button_to "Void", void_customer_order_path(customer_order),
                        method: :patch,
                        class: "text-red-600 hover:text-red-900 bg-transparent border-0 underline cursor-pointer text-sm font-medium",
                        data: { confirm: "Are you sure you want to void this customer order?" } %>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @customer_orders.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No customer orders found.</p>
        <% if params[:search].present? || params[:status].present? || params[:customer_id].present? %>
          <p class="text-sm text-gray-400 mt-2">
            Try adjusting your search or filters.
          </p>
        <% end %>
      </div>
    <% end %>
  </div>

  <!-- Pagination -->
  <% if @customer_orders.respond_to?(:total_pages) && @customer_orders.total_pages > 1 %>
    <div class="flex justify-center mt-6">
      <nav class="inline-flex rounded-md shadow-sm -space-x-px" aria-label="Pagination">

        <!-- Previous Page -->
        <% if @customer_orders.prev_page %>
          <%= link_to customer_orders_path(params.permit(:search, :status, :customer_id, :page).merge(page: @customer_orders.prev_page)),
              class: "relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="sr-only">Previous</span>
          <% end %>
        <% else %>
          <span class="relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400">
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
            <span class="sr-only">Previous</span>
          </span>
        <% end %>

        <!-- Page Numbers -->
        <% page_range = [[@customer_orders.current_page - 2, 1].max, [@customer_orders.current_page + 2, @customer_orders.total_pages].min] %>

        <% if page_range[0] > 1 %>
          <%= link_to customer_orders_path(params.permit(:search, :status, :customer_id, :page).merge(page: 1)),
              class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
            1
          <% end %>
          <% if page_range[0] > 2 %>
            <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
              ...
            </span>
          <% end %>
        <% end %>

        <% (page_range[0]..page_range[1]).each do |page| %>
          <% if page == @customer_orders.current_page %>
            <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-blue-50 text-sm font-medium text-blue-600">
              <%= page %>
            </span>
          <% else %>
            <%= link_to customer_orders_path(params.permit(:search, :status, :customer_id, :page).merge(page: page)),
                class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
              <%= page %>
            <% end %>
          <% end %>
        <% end %>

        <% if page_range[1] < @customer_orders.total_pages %>
          <% if page_range[1] < @customer_orders.total_pages - 1 %>
            <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700">
              ...
            </span>
          <% end %>
          <%= link_to customer_orders_path(params.permit(:search, :status, :customer_id, :page).merge(page: @customer_orders.total_pages)),
              class: "relative inline-flex items-center px-4 py-2 border border-gray-300 bg-white text-sm font-medium text-gray-700 hover:bg-gray-50" do %>
            <%= @customer_orders.total_pages %>
          <% end %>
        <% end %>

        <!-- Next Page -->
        <% if @customer_orders.next_page %>
          <%= link_to customer_orders_path(params.permit(:search, :status, :customer_id, :page).merge(page: @customer_orders.next_page)),
              class: "relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50" do %>
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          <% end %>
        <% else %>
          <span class="relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-gray-100 text-sm font-medium text-gray-400">
            <span class="sr-only">Next</span>
            <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
            </svg>
          </span>
        <% end %>

      </nav>
    </div>

    <!-- Pagination Info -->
    <div class="text-center mt-4">
      <p class="text-sm text-gray-600">
        Page <%= @customer_orders.current_page %> of <%= @customer_orders.total_pages %>
        (<%= @customer_orders.total_count %> total customer orders)
      </p>
    </div>
  <% end %>
</div>
