<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Customer Orders</h1>
    <%= link_to "New Customer Order", new_customer_order_path,
        class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <!-- Filters -->
  <div class="bg-white p-4 rounded-lg shadow mb-6">
    <%= form_with url: customer_orders_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      <div>
        <%= form.label :search, "Order Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :search,
            value: params[:search],
            placeholder: "Search order number...",
            class: "border border-gray-300 rounded-md px-3 py-2 w-48" %>
      </div>

      <div>
        <%= form.label :customer_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :customer_id,
            options_for_select([['All Customers', '']] + @customers.map { |c| [c.name, c.id] }, params[:customer_id]),
            {},
            { class: "border border-gray-300 rounded-md px-3 py-2 w-48" } %>
      </div>

      <div>
        <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :status,
            options_for_select([
              ['All Orders', ''],
              ['Active', 'active'],
              ['Outstanding', 'outstanding'],
              ['Voided', 'voided']
            ], params[:status]),
            {},
            { class: "border border-gray-300 rounded-md px-3 py-2" } %>
      </div>

      <div>
        <%= form.submit "Filter", class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Clear", customer_orders_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded ml-2" %>
      </div>
    <% end %>
  </div>

  <!-- Customer Orders Table -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Order Number
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Customer
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Date Received
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Works Orders
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Total Value
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @customer_orders.each do |customer_order| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= link_to customer_order.number, customer_order, class: "text-blue-600 hover:text-blue-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= customer_order.customer.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= customer_order.date_received.strftime("%d/%m/%Y") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= customer_order.works_orders.count %>
              <% if customer_order.works_orders.active.count != customer_order.works_orders.count %>
                (<%= customer_order.works_orders.active.count %> active)
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              Â£<%= sprintf("%.2f", customer_order.total_value) %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if customer_order.voided %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                  Voided
                </span>
              <% elsif customer_order.outstanding? %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-yellow-100 text-yellow-800">
                  Outstanding
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Complete
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to "View", customer_order, class: "text-blue-600 hover:text-blue-900" %>
                <% unless customer_order.voided %>
                  <%= link_to "Edit", edit_customer_order_path(customer_order), class: "text-yellow-600 hover:text-yellow-900" %>
                  <%= link_to "Add WO", new_customer_order_works_order_path(customer_order), class: "text-green-600 hover:text-green-900" %>
                  <% if customer_order.can_be_voided? %>
                    <%= link_to "Void", void_customer_order_path(customer_order),
                        method: :patch,
                        class: "text-red-600 hover:text-red-900",
                        data: { confirm: "Are you sure you want to void this customer order?" } %>
                  <% end %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @customer_orders.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No customer orders found.</p>
        <%= link_to "Create your first customer order", new_customer_order_path,
            class: "text-blue-600 hover:text-blue-900 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
