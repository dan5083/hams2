<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Transport Methods</h1>
    <%= link_to "New Transport Method", new_transport_method_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Name</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Status</th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Actions</th>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200">
        <% @transport_methods.each do |transport_method| %>
          <tr>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= transport_method.name %></td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if transport_method.enabled %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">Enabled</span>
              <% else %>
                <span class="px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">Disabled</span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <%= link_to "Edit", edit_transport_method_path(transport_method), class: "text-blue-600 hover:text-blue-900" %>
              <%= link_to transport_method.enabled? ? "Disable" : "Enable", toggle_enabled_transport_method_path(transport_method), method: :patch, class: "text-yellow-600 hover:text-yellow-900 ml-2" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
