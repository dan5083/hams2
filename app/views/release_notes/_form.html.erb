<%= form_with(model: @release_note.persisted? ? @release_note : [@works_order, @release_note], local: true) do |form| %>
  <% if @release_note.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(@release_note.errors.count, "error") %> with your submission:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside">
              <% @release_note.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Invoice Warning for Editing Invoiced Release Notes -->
  <% if @release_note.invoiced? %>
    <div class="bg-amber-50 border border-amber-200 rounded-md p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-amber-800">
            Invoiced Release Note
          </h3>
          <div class="mt-2 text-sm text-amber-700">
            <p><strong>Important:</strong> This release note has been invoiced
              (<%= link_to @release_note.invoice_item.invoice.display_name, @release_note.invoice_item.invoice,
                  class: "font-medium underline hover:no-underline" %>).
            </p>
            <ul class="mt-2 list-disc list-inside">
              <li><strong>Remarks:</strong> Can be updated freely - will appear in updated PDFs</li>
              <li><strong>Quantities:</strong> Can be updated for record accuracy, but <strong>will not affect the invoice amounts</strong></li>
              <li><strong>Other fields:</strong> Specification, customer details, etc. are pulled from the part/works order and will update automatically in PDFs</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Shipping Charges Warning for All Deliveries (excluding Lufthansa) -->
  <%
    is_lufthansa = @works_order&.customer&.name&.downcase&.include?('lufthansa')
    show_shipping_warning = !@release_note.persisted? && !is_lufthansa
  %>
  <% if show_shipping_warning %>
    <% selected_charges = @works_order.get_selected_additional_charges %>
    <% has_charges = selected_charges.any? %>

    <div class="<%= has_charges ? 'bg-blue-50 border-blue-200' : 'bg-amber-50 border-amber-200' %> border rounded-md p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <% if has_charges %>
            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          <% else %>
            <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium <%= has_charges ? 'text-blue-800' : 'text-amber-800' %>">
            <%= has_charges ? 'Shipping Charges Configured' : 'Shipping Charges - Check Required' %>
          </h3>
          <div class="mt-2 text-sm <%= has_charges ? 'text-blue-700' : 'text-amber-700' %>">
            <% if has_charges %>
              <p class="mb-2">The following shipping charges are configured for this order:</p>
              <ul class="list-disc list-inside mb-2">
                <% selected_charges.each do |charge| %>
                  <%
                    custom_amount = @works_order.get_custom_amount(charge.id)
                    amount = charge.is_variable? && custom_amount.present? ? custom_amount.to_f : charge.amount
                  %>
                  <li><strong><%= charge.name %></strong>: £<%= sprintf("%.2f", amount) %></li>
                <% end %>
              </ul>
              <p class="text-xs">
                Total additional charges: <strong>£<%= sprintf("%.2f", @works_order.calculate_additional_charges_total(@works_order.selected_charge_ids, @works_order.custom_amounts || {})) %></strong>
              </p>
              <p class="mt-2 text-xs">
                Need to modify charges?
                <%= link_to "Edit works order charges", edit_works_order_path(@works_order),
                    target: "_blank",
                    class: "font-medium underline hover:no-underline" %>
                (opens in new tab - won't lose your measurements)
              </p>
            <% else %>
              <p class="mb-2"><strong>Check shipping charges:</strong> No shipping charges are currently configured for this works order.</p>
              <p class="mb-2">
                If this order needs shipping charges (DPD, courier, special handling, etc.):
                <%= link_to "Add charges to the works order →", edit_works_order_path(@works_order),
                    target: "_blank",
                    class: "font-medium underline hover:no-underline inline-flex items-center" %>
                <span class="ml-1 text-xs">(opens in new tab - won't lose your measurements)</span>
              </p>
              <p class="text-xs">If the customer is collecting or no charges apply, just tick the confirmation box below.</p>
            <% end %>

            <!-- Required Acknowledgement Checkbox -->
            <div class="mt-4 pt-4 border-t <%= has_charges ? 'border-blue-200' : 'border-amber-200' %>">
              <label class="flex items-start">
                <input type="checkbox"
                       id="shipping_charges_acknowledged"
                       required
                       class="rounded border-gray-300 text-blue-600 shadow-sm focus:border-blue-300 focus:ring focus:ring-offset-0 focus:ring-blue-200 focus:ring-opacity-50 mt-0.5 flex-shrink-0">
                <span class="ml-2 text-sm <%= has_charges ? 'text-blue-800' : 'text-amber-800' %>">
                  <% if has_charges %>
                    <strong>I confirm</strong> the shipping charges shown above are correct for this delivery.
                  <% else %>
                    <strong>I confirm</strong> I have checked whether shipping charges are needed, and either added them or confirmed none apply (customer collecting, etc.).
                  <% end %>
                </span>
              </label>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">

        <!-- Date Field -->
        <div class="sm:col-span-2">
          <%= form.label :date, class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <!-- Quantity Accepted with Invoice Warning -->
        <div class="sm:col-span-2">
          <%= form.label :quantity_accepted, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :quantity_accepted,
                                id: "release_note_quantity_accepted",
                                min: 0,
                                max: @release_note.invoiced? ? nil : @works_order&.unreleased_quantity,
                                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <% if @release_note.invoiced? %>
            <p class="mt-1 text-xs text-amber-600">
              <strong>Invoice Impact:</strong> Changes will not affect
              <%= link_to @release_note.invoice_item.invoice.display_name, @release_note.invoice_item.invoice,
                  class: "font-medium underline hover:no-underline" %>
              (£<%= sprintf("%.2f", @release_note.invoice_item.line_amount_inc_tax) %>)
            </p>
            <% if defined?(@original_quantity_accepted) && @original_quantity_accepted != @release_note.quantity_accepted %>
              <p class="mt-1 text-xs text-amber-600">
                Original invoiced quantity: <%= @original_quantity_accepted %>
              </p>
            <% end %>
          <% else %>
            <p class="mt-1 text-xs text-gray-500">
              Maximum: <%= @works_order&.unreleased_quantity || 0 %> (remaining unreleased)
            </p>
          <% end %>
        </div>

        <!-- Quantity Rejected with Invoice Warning -->
        <div class="sm:col-span-2">
          <%= form.label :quantity_rejected, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :quantity_rejected,
                                min: 0,
                                max: @release_note.invoiced? ? nil : @works_order&.unreleased_quantity,
                                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <% if @release_note.invoiced? %>
            <p class="mt-1 text-xs text-amber-600">
              <strong>Note:</strong> Rejected quantity changes are for record keeping only
            </p>
            <% if defined?(@original_quantity_rejected) && @original_quantity_rejected != @release_note.quantity_rejected %>
              <p class="mt-1 text-xs text-amber-600">
                Original quantity: <%= @original_quantity_rejected %>
              </p>
            <% end %>
          <% end %>
        </div>

        <!-- Thickness Measurements Section (Conditional) - UPDATED FOR ELCOMETER -->
        <% if @release_note.requires_thickness_measurements? %>
          <div class="sm:col-span-6">
            <div class="border-t border-gray-200 pt-6">
              <h3 class="text-lg font-medium text-gray-900 mb-4">
                Thickness Measurements
                <span class="text-sm font-normal text-gray-500">(Required for Aerospace/Defense)</span>
              </h3>

              <div class="space-y-6">
                <% @release_note.get_required_treatments.each do |treatment| %>
                  <%
                    treatment_id = treatment[:treatment_id]
                    display_name = treatment[:display_name]
                    process_type = treatment[:process_type]
                    is_enp = @release_note.treatment_is_enp?(process_type)
                  %>

                  <% if is_enp %>
                    <!-- ENP Measurement UI -->
                    <%
                      existing_enp_measurements = @release_note.get_enp_measurements(treatment_id)
                    %>

                    <div data-enp-section="<%= treatment_id %>"
                         class="border border-gray-200 rounded-lg p-4 bg-gray-50">

                      <!-- ENP Header -->
                      <div class="flex items-center justify-between mb-4">
                        <div>
                          <label class="block text-sm font-medium text-gray-700">
                            <%= display_name %>
                            <span class="text-red-500">*</span>
                          </label>
                          <p class="mt-1 text-xs text-gray-500">6 measurement points (A-F)</p>
                        </div>
                        <div class="flex gap-2">
                          <!-- Progress Counter -->
                          <span class="enp-progress text-sm text-gray-500">0/6 complete</span>

                          <!-- Clear Button -->
                          <button type="button"
                                  onclick="clearENPMeasurements('<%= treatment_id %>')"
                                  class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Clear
                          </button>
                        </div>
                      </div>

                      <!-- Statistics Display -->
                      <div class="enp-statistics mb-4"></div>

                      <!-- ENP Measurement Table -->
                      <div class="mb-4">
                        <div class="overflow-hidden border border-gray-200 rounded-md">
                          <table class="min-w-full divide-y divide-gray-200">
                            <thead class="bg-gray-100">
                              <tr>
                                <th class="px-3 py-2 text-left text-xs font-medium text-gray-700 uppercase">Point</th>
                                <th class="px-3 py-2 text-left text-xs font-medium text-gray-700 uppercase">Before (mm)</th>
                                <th class="px-3 py-2 text-left text-xs font-medium text-gray-700 uppercase">After (mm)</th>
                                <th class="px-3 py-2 text-left text-xs font-medium text-gray-700 uppercase">Film Thickness (µm)</th>
                              </tr>
                            </thead>
                            <tbody class="bg-white divide-y divide-gray-200">
                              <% ['A', 'B', 'C', 'D', 'E', 'F'].each_with_index do |point, index| %>
                                <%
                                  existing_point = existing_enp_measurements.find { |m| m['point'] == point }
                                  start_value = existing_point ? existing_point['start_mm'] : nil
                                  finish_value = existing_point ? existing_point['finish_mm'] : nil
                                %>
                                <tr>
                                  <td class="px-3 py-2 text-sm font-medium text-gray-900"><%= point %></td>
                                  <td class="px-3 py-2">
                                    <input type="number"
                                           class="enp-start block w-full text-sm border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                                           data-treatment="<%= treatment_id %>"
                                           data-index="<%= index %>"
                                           step="0.001"
                                           min="0"
                                           value="<%= start_value %>"
                                           onblur="updateENPMeasurement(this)"
                                           placeholder="10.500" />
                                  </td>
                                  <td class="px-3 py-2">
                                    <input type="number"
                                           class="enp-finish block w-full text-sm border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                                           data-treatment="<%= treatment_id %>"
                                           data-index="<%= index %>"
                                           step="0.001"
                                           min="0"
                                           value="<%= finish_value %>"
                                           onblur="updateENPMeasurement(this)"
                                           placeholder="10.525" />
                                  </td>
                                  <td class="px-3 py-2">
                                    <span class="enp-growth text-sm text-gray-500" data-index="<%= index %>">—</span>
                                  </td>
                                </tr>
                              <% end %>
                            </tbody>
                          </table>
                        </div>
                        <p class="mt-2 text-xs text-gray-500">
                          <strong>Auto-fill:</strong> Enter "Before" value for point A and press TAB - all other points will be filled automatically.<br>
                          <strong>Calculation:</strong> Film thickness (µm) = (After - Before) × 1000 ÷ 2 (plated on both sides).
                        </p>
                      </div>

                      <!-- Hidden field to store ENP measurements for form submission -->
                      <%= hidden_field_tag "enp_measurements_#{treatment_id}",
                                          existing_enp_measurements.to_json,
                                          class: "enp-data" %>
                    </div>

                  <% else %>
                    <!-- Anodic Treatment - Elcometer Controller Wrapper -->
                    <%
                      target_thickness = treatment[:target_thickness]
                      existing_readings = @release_note.get_thickness_readings(treatment_id)
                      field_name = "thickness_measurement_#{treatment_id}"
                    %>

                    <div data-controller="elcometer"
                         data-elcometer-treatment-id-value="<%= treatment_id %>"
                         data-elcometer-process-type-value="<%= process_type %>"
                         data-elcometer-target-thickness-value="<%= target_thickness %>"
                         data-elcometer-display-name-value="<%= display_name %>"
                         class="border border-gray-200 rounded-lg p-4 bg-gray-50">

                      <!-- Treatment Header -->
                      <div class="flex items-center justify-between mb-4">
                        <div>
                          <label class="block text-sm font-medium text-gray-700">
                            <%= display_name %>
                            <span class="text-red-500">*</span>
                          </label>
                        </div>
                        <div class="flex gap-2">
                          <!-- Connect Button -->
                          <button type="button"
                                  data-elcometer-target="connectButton"
                                  data-action="click->elcometer#connectElcometer"
                                  class="inline-flex items-center px-3 py-2 border border-blue-600 rounded-md shadow-sm text-sm font-medium text-blue-600 bg-white hover:bg-blue-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                            </svg>
                            Connect Elcometer
                          </button>

                          <!-- Stop Button (hidden initially) -->
                          <button type="button"
                                  data-elcometer-target="stopButton"
                                  data-action="click->elcometer#stopReading"
                                  class="hidden inline-flex items-center px-3 py-2 border border-red-600 rounded-md shadow-sm text-sm font-medium text-red-600 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
                            </svg>
                            Stop
                          </button>

                          <!-- Clear Button -->
                          <button type="button"
                                  data-action="click->elcometer#clearReadings"
                                  class="inline-flex items-center px-3 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                            <svg class="h-4 w-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                            Clear
                          </button>
                        </div>
                      </div>

                      <!-- Statistics Display -->
                      <div data-elcometer-target="statistics" class="mb-4"></div>

                      <!-- Readings Display -->
                      <div class="mb-4">
                        <label class="block text-xs font-medium text-gray-500 mb-2">Readings:</label>
                        <div data-elcometer-target="readingsList" class="min-h-[3rem] p-3 bg-white border border-gray-200 rounded-md">
                          <% if existing_readings.any? %>
                            <% existing_readings.each do |reading| %>
                              <span class="inline-block px-2 py-1 bg-blue-100 text-blue-800 rounded text-sm mr-2 mb-2">
                                <%= reading %> µm
                              </span>
                            <% end %>
                          <% else %>
                            <span class="text-gray-400 text-sm">No readings yet...</span>
                          <% end %>
                        </div>
                      </div>

                      <!-- Manual Entry - 8 Individual Fields -->
                      <div class="space-y-3">
                        <div>
                          <label class="block text-xs font-medium text-gray-500 mb-2">
                            Manual Entry (µm):
                          </label>
                          <div class="grid grid-cols-4 gap-2">
                            <% 8.times do |i| %>
                              <input type="number"
                                     data-elcometer-target="manualReadingInput"
                                     data-action="blur->elcometer#addManualReading"
                                     data-index="<%= i %>"
                                     step="0.1"
                                     min="0"
                                     class="block w-full text-sm border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500"
                                     placeholder="<%= i + 1 %>" />
                            <% end %>
                          </div>
                          <p class="mt-2 text-xs text-gray-500">
                            Enter readings and press TAB. Values are added automatically.
                          </p>
                        </div>
                      </div>

                      <!-- Hidden field to store readings array for form submission -->
                      <%= hidden_field_tag "thickness_readings_#{treatment_id}",
                                          existing_readings.to_json,
                                          data: { elcometer_target: "readingsData" } %>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Statement (using remarks field) -->
        <div class="sm:col-span-6">
          <%= form.label :remarks, "Statement", class: "block text-sm font-medium text-gray-700" %>
          <%
            # Default statement for new release notes
            default_statement = "Certificate of conformity - We certify that the above work has been processed and inspected in accordance with AS9100D & BS EN ISO 9001:2015 standards and the terms of your order."

            # Use existing remarks if present, otherwise use default
            field_value = @release_note.remarks.present? ? @release_note.remarks : default_statement
          %>
          <%= form.text_area :remarks, rows: 4,
                            value: field_value,
                            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm",
                            placeholder: "Enter the release statement for this release note..." %>
          <p class="mt-1 text-xs text-gray-500">
            Customize the release statement for this specific release note.
            <% if @release_note.invoiced? %>
              <span class="font-medium text-green-600">Changes will appear in updated PDFs.</span>
            <% end %>
          </p>
        </div>

        <!-- No Invoice Checkbox - Disabled if already invoiced -->
        <div class="sm:col-span-6">
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <%= form.check_box :no_invoice,
                                 disabled: @release_note.invoiced?,
                                 class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded #{'bg-gray-100' if @release_note.invoiced?}" %>
            </div>
            <div class="ml-3 text-sm">
              <%= form.label :no_invoice, "Do not invoice this release",
                            class: "font-medium #{'text-gray-500' if @release_note.invoiced?} #{'text-gray-700' unless @release_note.invoiced?}" %>
              <% if @release_note.invoiced? %>
                <p class="text-gray-500">Cannot modify - this release note has already been invoiced</p>
              <% else %>
                <p class="text-gray-500">Check this if this release should not generate an invoice (e.g., reworks, samples)</p>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Form Actions -->
    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
      <%= link_to 'Cancel', @release_note.persisted? ? @release_note : @works_order,
                  class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mr-3" %>
      <%= form.submit (@release_note.persisted? ? "Update Release Note" : "Create Release Note"),
                      class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>

  <!-- JavaScript for auto-populating quantity accepted -->
  <% unless @release_note.invoiced? %>
    <script>
      // Run immediately, not waiting for DOMContentLoaded
      (function() {
