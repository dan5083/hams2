<%= form_with(model: @release_note.persisted? ? @release_note : [@works_order, @release_note], local: true) do |form| %>
  <% if @release_note.errors.any? %>
    <div class="bg-red-50 border border-red-200 rounded-md p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            There were <%= pluralize(@release_note.errors.count, "error") %> with your submission:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc list-inside">
              <% @release_note.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Invoice Warning for Editing Invoiced Release Notes -->
  <% if @release_note.invoiced? %>
    <div class="bg-amber-50 border border-amber-200 rounded-md p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-amber-800">
            Invoiced Release Note
          </h3>
          <div class="mt-2 text-sm text-amber-700">
            <p><strong>Important:</strong> This release note has been invoiced
              (<%= link_to @release_note.invoice_item.invoice.display_name, @release_note.invoice_item.invoice,
                  class: "font-medium underline hover:no-underline" %>).
            </p>
            <ul class="mt-2 list-disc list-inside">
              <li><strong>Remarks:</strong> Can be updated freely - will appear in updated PDFs</li>
              <li><strong>Quantities:</strong> Can be updated for record accuracy, but <strong>will not affect the invoice amounts</strong></li>
              <li><strong>Other fields:</strong> Specification, customer details, etc. are pulled from the part/works order and will update automatically in PDFs</li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Shipping Charges Warning for Courier Deliveries (excluding Lufthansa) -->
  <%
    is_lufthansa = @works_order&.customer&.name&.downcase&.include?('lufthansa')
    show_shipping_warning = @works_order&.requires_shipping? && !@release_note.persisted? && !is_lufthansa
  %>
  <% if show_shipping_warning %>
    <% selected_charges = @works_order.get_selected_additional_charges %>
    <% has_charges = selected_charges.any? %>

    <div class="<%= has_charges ? 'bg-blue-50 border-blue-200' : 'bg-amber-50 border-amber-200' %> border rounded-md p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <% if has_charges %>
            <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
            </svg>
          <% else %>
            <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
            </svg>
          <% end %>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium <%= has_charges ? 'text-blue-800' : 'text-amber-800' %>">
            <%= has_charges ? 'Courier Delivery - Charges Configured' : 'Courier Delivery - No Charges Set' %>
          </h3>
          <div class="mt-2 text-sm <%= has_charges ? 'text-blue-700' : 'text-amber-700' %>">
            <% if has_charges %>
              <p class="mb-2">This order will be sent by courier. The following charges are configured:</p>
              <ul class="list-disc list-inside mb-2">
                <% selected_charges.each do |charge| %>
                  <%
                    custom_amount = @works_order.get_custom_amount(charge.id)
                    amount = charge.is_variable? && custom_amount.present? ? custom_amount.to_f : charge.amount
                  %>
                  <li><strong><%= charge.name %></strong>: £<%= sprintf("%.2f", amount) %></li>
                <% end %>
              </ul>
              <p class="text-xs">
                Total additional charges: <strong>£<%= sprintf("%.2f", @works_order.calculate_additional_charges_total(@works_order.selected_charge_ids, @works_order.custom_amounts || {})) %></strong>
              </p>
              <p class="mt-2 text-xs">
                Need to modify charges?
                <%= link_to "Edit works order charges", edit_works_order_path(@works_order),
                    target: "_blank",
                    class: "font-medium underline hover:no-underline" %>
                (opens in new tab - won't lose your measurements)
              </p>
            <% else %>
              <p class="mb-2"><strong>Important:</strong> This order requires courier delivery but no shipping charges are configured.</p>
              <p class="mb-2">
                <%= link_to "Add shipping charges to this works order →", edit_works_order_path(@works_order),
                    target: "_blank",
                    class: "font-medium underline hover:no-underline inline-flex items-center" %>
                <span class="ml-1 text-xs">(opens in new tab - won't lose your measurements)</span>
              </p>
              <p class="text-xs">After adding charges, return to this tab and submit the release note.</p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="bg-white shadow-sm rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">

        <!-- Date Field -->
        <div class="sm:col-span-2">
          <%= form.label :date, class: "block text-sm font-medium text-gray-700" %>
          <%= form.date_field :date, class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <!-- Quantity Accepted with Invoice Warning -->
        <div class="sm:col-span-2">
          <%= form.label :quantity_accepted, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :quantity_accepted,
                                id: "release_note_quantity_accepted",
                                min: 0,
                                max: @release_note.invoiced? ? nil : @works_order&.unreleased_quantity,
                                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <% if @release_note.invoiced? %>
            <p class="mt-1 text-xs text-amber-600">
              <strong>Invoice Impact:</strong> Changes will not affect
              <%= link_to @release_note.invoice_item.invoice.display_name, @release_note.invoice_item.invoice,
                  class: "font-medium underline hover:no-underline" %>
              (£<%= sprintf("%.2f", @release_note.invoice_item.line_amount_inc_tax) %>)
            </p>
            <% if defined?(@original_quantity_accepted) && @original_quantity_accepted != @release_note.quantity_accepted %>
              <p class="mt-1 text-xs text-amber-600">
                Original invoiced quantity: <%= @original_quantity_accepted %>
              </p>
            <% end %>
          <% else %>
            <p class="mt-1 text-xs text-gray-500">
              Maximum: <%= @works_order&.unreleased_quantity || 0 %> (remaining unreleased)
            </p>
          <% end %>
        </div>

        <!-- Quantity Rejected with Invoice Warning -->
        <div class="sm:col-span-2">
          <%= form.label :quantity_rejected, class: "block text-sm font-medium text-gray-700" %>
          <%= form.number_field :quantity_rejected,
                                min: 0,
                                max: @release_note.invoiced? ? nil : @works_order&.unreleased_quantity,
                                class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
          <% if @release_note.invoiced? %>
            <p class="mt-1 text-xs text-amber-600">
              <strong>Note:</strong> Rejected quantity changes are for record keeping only
            </p>
            <% if defined?(@original_quantity_rejected) && @original_quantity_rejected != @release_note.quantity_rejected %>
              <p class="mt-1 text-xs text-amber-600">
                Original quantity: <%= @original_quantity_rejected %>
              </p>
            <% end %>
          <% end %>
        </div>

        <!-- Thickness Measurements Section (Conditional) - UPDATED FOR ELCOMETER -->
        <% if @release_note.requires_thickness_measurements? %>
          <div class="sm:col-span-6">
            <div class="border-t border-gray-200 pt-6">
              <h3 class="text-lg font-medium text-gray-900 mb-4">
                Thickness Measurements
                <span class="text-sm font-normal text-gray-500">(Required for Aerospace/Defense)</span>
              </h3>

              <div class="space-y-6">
                <% @release_note.get_required_treatments.each do |treatment| %>
                  <%
                    treatment_id = treatment[:treatment_id]
                    display_name = treatment[:display_name]
                    process_type = treatment[:process_type]
                    is_enp = @release_note.treatment_is_enp?(process_type)
                  %>

                  <% if is_enp %>
                    <!-- ENP Measurement UI -->
                    <%
                      existing_enp_measurements = @release_note.get_enp_measurements(treatment_id)
                    %>

                    <div data-controller="enp"
                         data-enp-treatment-id-value="<%= treatment_id %>"
                         data-enp-process-type-value="<%= process_type %>"
                         data-enp-enp-type-value="<%= process_type %>"
                         data-enp-display-name-value="<%= display_name %>"
                         class="border border-gray-200 rounded-lg p-4 bg-gray-50">

                      <!-- ENP Header -->
                      <div class="flex items-center justify-between mb-4">
                        <div>
                          <label class="block text-sm font-medium text-gray-700">
                            <%= display_name %>
                            <span class="text-red-500">*</span>
                          </label>
                          <p class="mt-1 text-xs text-gray-500">6 measurement points (A-F)</p>
                        </div>
                        <div class="flex gap-2">
                          <!-- Progress Counter -->
                          <span data-enp-target="progressCounter" class="text-sm text-gray-500">0/6 complete</span>

                          <!-- Clear Button -->
                          <button type="button"
                                  data-action="click->enp#clearAllMeasurements"
                                  class="text-sm text-red-600 hover:text-red-800 underline">
                            Clear All
                          </button>
                        </div>
                      </div>

                      <!-- ENP Measurement Grid -->
                      <div class="grid grid-cols-2 gap-4">
                        <% ['A', 'B', 'C', 'D', 'E', 'F'].each do |point| %>
                          <%
                            existing_measurement = existing_enp_measurements.find { |m| m[:point] == point }
                            existing_thickness = existing_measurement&.dig(:thickness)
                            existing_phos = existing_measurement&.dig(:phosphorus_pct)
                          %>
                          <div class="border border-gray-200 rounded p-3 bg-white">
                            <label class="block text-xs font-medium text-gray-700 mb-2">
                              Point <%= point %>
                            </label>

                            <!-- Thickness Input -->
                            <input type="number"
                                   step="0.1"
                                   min="0"
                                   placeholder="Thickness (µm)"
                                   value="<%= existing_thickness %>"
                                   data-enp-target="thicknessInput"
                                   data-point="<%= point %>"
                                   data-action="input->enp#updateMeasurement"
                                   class="block w-full text-sm border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 mb-2">

                            <!-- Phosphorus % Input -->
                            <input type="number"
                                   step="0.1"
                                   min="0"
                                   max="100"
                                   placeholder="P% (optional)"
                                   value="<%= existing_phos %>"
                                   data-enp-target="phosphorusInput"
                                   data-point="<%= point %>"
                                   data-action="input->enp#updateMeasurement"
                                   class="block w-full text-sm border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500">
                          </div>
                        <% end %>
                      </div>

                      <!-- Hidden field for form submission -->
                      <input type="hidden"
                             name="enp_measurements_<%= treatment_id %>"
                             data-enp-target="hiddenField"
                             value="<%= existing_enp_measurements.to_json %>">

                      <!-- Statistics Display -->
                      <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded" data-enp-target="stats">
                        <div class="text-xs text-blue-800">
                          <strong>Statistics:</strong>
                          <span data-enp-target="statsContent">No measurements yet</span>
                        </div>
                      </div>
                    </div>

                  <% else %>
                    <!-- Anodic Thickness Measurement UI -->
                    <%
                      target_thickness = treatment[:target_thickness]
                      existing_readings = @release_note.get_thickness_readings(treatment_id)
                    %>

                    <div data-controller="elcometer"
                         data-elcometer-treatment-id-value="<%= treatment_id %>"
                         data-elcometer-process-type-value="<%= process_type %>"
                         data-elcometer-target-thickness-value="<%= target_thickness %>"
                         data-elcometer-display-name-value="<%= display_name %>"
                         class="border border-gray-200 rounded-lg p-4 bg-gray-50">

                      <!-- Elcometer Header -->
                      <div class="flex items-center justify-between mb-4">
                        <div>
                          <label class="block text-sm font-medium text-gray-700">
                            <%= display_name %>
                            <span class="text-red-500">*</span>
                          </label>
                          <p class="mt-1 text-xs text-gray-500">
                            Target: <%= target_thickness %>µm | Use Elcometer or enter manually
                          </p>
                        </div>
                        <div class="flex gap-2">
                          <!-- Reading Counter -->
                          <span data-elcometer-target="counter" class="text-sm text-gray-500">0 readings</span>

                          <!-- Clear Button -->
                          <button type="button"
                                  data-action="click->elcometer#clearReadings"
                                  class="text-sm text-red-600 hover:text-red-800 underline">
                            Clear
                          </button>
                        </div>
                      </div>

                      <!-- Elcometer Input Area -->
                      <div class="mb-4">
                        <input type="text"
                               placeholder="Click here, then scan with Elcometer"
                               data-elcometer-target="input"
                               data-action="keypress->elcometer#handleInput blur->elcometer#handleBlur"
                               class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm font-mono">
                        <p class="mt-1 text-xs text-gray-500">
                          Elcometer sends readings as: "70.5µm␍" - they'll be captured automatically
                        </p>
                      </div>

                      <!-- Manual Entry -->
                      <div class="mb-4">
                        <label class="block text-xs font-medium text-gray-700 mb-1">
                          Or enter manually:
                        </label>
                        <div class="flex gap-2">
                          <input type="number"
                                 step="0.1"
                                 min="0"
                                 placeholder="e.g., 25.4"
                                 data-elcometer-target="manualInput"
                                 data-action="keypress->elcometer#handleManualKeypress"
                                 class="block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm">
                          <button type="button"
                                  data-action="click->elcometer#addManualReading"
                                  class="px-4 py-2 bg-blue-600 text-white text-sm rounded-md hover:bg-blue-700">
                            Add
                          </button>
                        </div>
                      </div>

                      <!-- Readings Display -->
                      <div class="mb-4">
                        <label class="block text-xs font-medium text-gray-700 mb-2">Readings:</label>
                        <div data-elcometer-target="readingsList"
                             class="bg-white border border-gray-200 rounded-md p-3 min-h-[60px] max-h-[200px] overflow-y-auto">
                          <% if existing_readings.any? %>
                            <% existing_readings.each_with_index do |reading, index| %>
                              <span class="inline-flex items-center gap-1 px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded mr-2 mb-2">
                                <%= sprintf("%.1f", reading) %>µm
                                <button type="button"
                                        data-action="click->elcometer#removeReading"
                                        data-index="<%= index %>"
                                        class="text-blue-600 hover:text-blue-900">×</button>
                              </span>
                            <% end %>
                          <% else %>
                            <p class="text-xs text-gray-400">No readings yet</p>
                          <% end %>
                        </div>
                      </div>

                      <!-- Hidden field for form submission (JSON array of readings) -->
                      <input type="hidden"
                             name="thickness_readings_<%= treatment_id %>"
                             data-elcometer-target="hiddenField"
                             value="<%= existing_readings.to_json %>">

                      <!-- Statistics Display -->
                      <div class="mt-4 p-3 bg-blue-50 border border-blue-200 rounded" data-elcometer-target="stats">
                        <div class="text-xs text-blue-800">
                          <strong>Statistics:</strong>
                          <span data-elcometer-target="statsContent">No readings yet</span>
                        </div>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>

        <!-- Remarks Field -->
        <div class="sm:col-span-6">
          <%= form.label :remarks, class: "block text-sm font-medium text-gray-700" %>
          <%= form.text_area :remarks,
                            rows: 4,
                            placeholder: "Optional notes about this release...",
                            class: "mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" %>
        </div>

        <!-- No Invoice Checkbox - Disabled if already invoiced -->
        <div class="sm:col-span-6">
          <div class="flex items-start">
            <div class="flex items-center h-5">
              <%= form.check_box :no_invoice,
                                 disabled: @release_note.invoiced?,
                                 class: "focus:ring-blue-500 h-4 w-4 text-blue-600 border-gray-300 rounded #{'bg-gray-100' if @release_note.invoiced?}" %>
            </div>
            <div class="ml-3 text-sm">
              <%= form.label :no_invoice, "Do not invoice this release",
                            class: "font-medium #{'text-gray-500' if @release_note.invoiced?} #{'text-gray-700' unless @release_note.invoiced?}" %>
              <% if @release_note.invoiced? %>
                <p class="text-gray-500">Cannot modify - this release note has already been invoiced</p>
              <% else %>
                <p class="text-gray-500">Check this if this release should not generate an invoice (e.g., reworks, samples)</p>
              <% end %>
            </div>
          </div>
        </div>

      </div>
    </div>

    <!-- Form Actions -->
    <div class="px-4 py-3 bg-gray-50 text-right sm:px-6">
      <%= link_to 'Cancel', @release_note.persisted? ? @release_note : @works_order,
                  class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mr-3" %>
      <%= form.submit (@release_note.persisted? ? "Update Release Note" : "Create Release Note"),
                      class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  </div>

  <!-- JavaScript for auto-populating quantity accepted -->
  <% unless @release_note.invoiced? %>
    <script>
      // Run immediately, not waiting for DOMContentLoaded
      (function() {
        function autoPopulateQuantity() {
          const quantityField = document.getElementById('release_note_quantity_accepted');

          if (!quantityField) {
            // If field not ready, try again in 100ms
            setTimeout(autoPopulateQuantity, 100);
            return;
          }

          const currentValue = parseInt(quantityField.value) || 0;
          const maxQuantity = parseInt(quantityField.getAttribute('max')) || 0;

          // Only auto-populate if the field is empty/zero and we have unreleased quantity
          if (currentValue === 0 && maxQuantity > 0) {
            // Set the field value
            quantityField.value = maxQuantity;

            // Flash the field to draw attention
            quantityField.classList.add('ring-2', 'ring-amber-400', 'bg-amber-50');
            setTimeout(() => {
              quantityField.classList.remove('ring-2', 'ring-amber-400', 'bg-amber-50');
            }, 2000);

            // Show warning notification
            const notification = document.createElement('div');
            notification.className = 'fixed top-4 right-4 z-50 bg-amber-50 border border-amber-200 text-amber-800 rounded-md p-4 shadow-lg max-w-md animate-fade-in';
            notification.innerHTML = `
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <svg class="h-5 w-5 text-amber-400" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="ml-3 flex-1">
                  <p class="text-sm font-medium">Quantity Accepted Auto-Populated</p>
                  <p class="mt-1 text-sm">Set to ${maxQuantity} (all unreleased parts). Please adjust if you're releasing fewer parts or have rejections.</p>
                </div>
                <button class="ml-3 text-amber-400 hover:text-amber-600" onclick="this.parentElement.parentElement.remove()">
                  <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd"/>
                  </svg>
                </button>
              </div>
            `;
            document.body.appendChild(notification);

            // Auto-remove after 8 seconds (longer since it's important)
            setTimeout(() => {
              notification.remove();
            }, 8000);
          }
        }

        // Try immediately
        autoPopulateQuantity();

        // Also try on DOMContentLoaded in case we're early
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', autoPopulateQuantity);
        }
      })();
    </script>
  <% end %>

  <!-- JavaScript for handling thickness measurements submission -->
  <% if @release_note.requires_thickness_measurements? %>
    <script>
      document.addEventListener('DOMContentLoaded', function() {
        const form = document.querySelector('form');

        form.addEventListener('submit', function(e) {
          // Collect all thickness measurements from Elcometer controllers
          const measurements = [];

          // Find all thickness readings hidden fields
          const readingsFields = document.querySelectorAll('[name^="thickness_readings_"]');

          readingsFields.forEach(function(field) {
            // Extract treatment_id from field name: thickness_readings_abc123
            const treatmentId = field.name.replace('thickness_readings_', '');

            // Get the readings data (JSON array)
            let readings = [];
            try {
              readings = JSON.parse(field.value || '[]');
            } catch(e) {
              console.error('Error parsing readings:', e);
            }

            if (readings.length > 0) {
              // Get treatment info from the controller element
              const controller = field.closest('[data-controller="elcometer"]');
              const processType = controller.dataset.elcometerProcessTypeValue;
              const targetThickness = parseFloat(controller.dataset.elcometerTargetThicknessValue) || 0;
              const displayName = controller.dataset.elcometerDisplayNameValue;

              measurements.push({
                treatment_id: treatmentId,
                process_type: processType,
                target_thickness: targetThickness,
                display_name: displayName,
                readings: readings
              });
            }
          });

          // Add hidden field with JSON data for all measurements
          const hiddenField = document.createElement('input');
          hiddenField.type = 'hidden';
          hiddenField.name = 'release_note[measured_thicknesses]';
          hiddenField.value = JSON.stringify({ measurements: measurements });
          form.appendChild(hiddenField);
        });
      });
    </script>
  <% end %>

<% end %>
