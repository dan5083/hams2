<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">
      Edit Release Note RN<%= @release_note.number %>
    </h1>
    <div class="flex space-x-2">
      <%= link_to "View", @release_note,
          class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to Works Order", @release_note.works_order,
          class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <!-- Release Note Summary -->
  <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-6 mb-6">
    <h2 class="text-lg font-semibold text-gray-900 mb-3">Current Release Note</h2>
    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 text-sm">
      <div>
        <span class="font-medium text-gray-500">Number:</span>
        <span class="text-gray-900">RN<%= @release_note.number %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500">Date:</span>
        <span class="text-gray-900"><%= @release_note.date.strftime("%d/%m/%Y") %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500">Accepted:</span>
        <span class="text-gray-900"><%= @release_note.quantity_accepted %></span>
      </div>
      <div>
        <span class="font-medium text-gray-500">Rejected:</span>
        <span class="text-gray-900"><%= @release_note.quantity_rejected %></span>
      </div>
    </div>
  </div>

  <%= render 'form', release_note: @release_note, works_order: @release_note.works_order %>
</div>
