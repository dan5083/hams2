<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Release Notes</h1>
    <div class="flex space-x-2">
      <%= link_to "Pending Invoice", pending_invoice_release_notes_path,
          class: "bg-orange-500 hover:bg-orange-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <!-- Filters -->
  <div class="bg-white p-4 rounded-lg shadow mb-6">
    <%= form_with url: release_notes_path, method: :get, local: true, class: "flex flex-wrap gap-4 items-end" do |form| %>
      <div>
        <%= form.label :search, "RN Number", class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :search,
            value: params[:search],
            placeholder: "Search RN number...",
            class: "border border-gray-300 rounded-md px-3 py-2 w-32" %>
      </div>

      <div>
        <%= form.label :customer_id, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :customer_id,
            options_for_select([['All Customers', '']] + @customers.map { |c| [c.name, c.id] }, params[:customer_id]),
            {},
            { class: "border border-gray-300 rounded-md px-3 py-2 w-48" } %>
      </div>

      <div>
        <%= form.label :status, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.select :status,
            options_for_select([
              ['All Release Notes', ''],
              ['Active', 'active'],
              ['Pending Invoice', 'pending_invoice'],
              ['Invoiced', 'invoiced'],
              ['Voided', 'voided']
            ], params[:status]),
            {},
            { class: "border border-gray-300 rounded-md px-3 py-2" } %>
      </div>

      <div>
        <%= form.submit "Filter", class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
        <%= link_to "Clear", release_notes_path, class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded ml-2" %>
      </div>
    <% end %>
  </div>

  <!-- Release Notes Table -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            RN Number
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Date
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Works Order
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Customer
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Quantities
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Issued By
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @release_notes.each do |release_note| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
              <%= link_to "RN#{release_note.number}", release_note, class: "text-blue-600 hover:text-blue-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= release_note.date.strftime("%d/%m/%Y") %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= link_to "WO#{release_note.works_order.number}", release_note.works_order,
                  class: "text-blue-600 hover:text-blue-900" %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= release_note.customer.name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= release_note.quantity_summary %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
              <%= release_note.issued_by.display_name %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if release_note.voided %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                  Voided
                </span>
              <% elsif release_note.invoice_item.present? %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                  Invoiced
                </span>
              <% elsif release_note.can_be_invoiced? %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">
                  Pending Invoice
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Active
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to "View", release_note, class: "text-blue-600 hover:text-blue-900" %>
                <%= link_to "PDF", pdf_release_note_path(release_note),
                    class: "text-green-600 hover:text-green-900", target: "_blank" %>
                <!-- UPDATED: Allow editing for all non-voided release notes -->
                <% if release_note.can_be_edited? %>
                  <%= link_to "Edit", edit_release_note_path(release_note),
                      class: "text-yellow-600 hover:text-yellow-900",
                      title: release_note.invoiced? ? "Edit (invoiced - changes won't affect invoice)" : "Edit" %>
                <% end %>
                <!-- Void only available for non-invoiced release notes -->
                <% if release_note.can_be_voided? %>
                  <%= link_to "Void", void_release_note_path(release_note),
                      method: :patch,
                      class: "text-red-600 hover:text-red-900",
                      data: { confirm: "Are you sure you want to void this release note?" } %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @release_notes.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No release notes found.</p>
      </div>
    <% end %>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-6">
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Total Release Notes</h3>
      <p class="text-2xl font-bold text-gray-900"><%= @release_notes.count %></p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Pending Invoice</h3>
      <p class="text-2xl font-bold text-orange-600">
        <%= ReleaseNote.requires_invoicing.count %>
      </p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Invoiced</h3>
      <p class="text-2xl font-bold text-blue-600">
        <%= ReleaseNote.joins(:invoice_item).count %>
      </p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Voided</h3>
      <p class="text-2xl font-bold text-red-600">
        <%= ReleaseNote.voided.count %>
      </p>
    </div>
  </div>

  <!-- NEW: Information Panel about Post-Invoice Editing -->
  <div class="mt-6 bg-blue-50 border border-blue-200 rounded-lg p-4">
    <div class="flex">
      <div class="flex-shrink-0">
        <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
      </div>
      <div class="ml-3 flex-1">
        <h3 class="text-sm font-medium text-blue-800">Post-Invoice Editing</h3>
        <div class="mt-2 text-sm text-blue-700">
          <p><strong>Invoiced release notes can now be edited</strong> for record accuracy and updated delivery documentation:</p>
          <ul class="mt-2 list-disc list-inside">
            <li><strong>Quantities:</strong> Can be updated but won't affect existing invoices</li>
            <li><strong>Remarks:</strong> Can be freely updated and will appear in new PDFs</li>
            <li><strong>Specifications & Details:</strong> Auto-update from part records when PDFs are regenerated</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
