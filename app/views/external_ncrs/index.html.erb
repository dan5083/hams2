<%# app/views/external_ncrs/show.html.erb %>
<div class="container mx-auto px-4 py-6">
  <!-- Header -->
  <div class="flex justify-between items-center mb-6">
    <div class="flex-1 min-w-0">
      <h1 class="text-3xl font-bold text-gray-900">
        <%= @external_ncr.display_name %>
      </h1>
      <p class="mt-1 text-sm text-gray-500">
        <%= @external_ncr.display_title %>
      </p>
    </div>
    <div class="flex items-center space-x-3">
      <% if @external_ncr.can_advance_status? %>
        <%= link_to advance_status_external_ncr_path(@external_ncr),
            method: :patch,
            class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" do %>
          Advance to <%= @external_ncr.next_status.humanize %>
        <% end %>
      <% end %>
      <%= link_to edit_external_ncr_path(@external_ncr),
          class: "bg-yellow-500 hover:bg-yellow-700 text-white font-bold py-2 px-4 rounded" do %>
        Edit
      <% end %>
    </div>
  </div>

  <!-- Document Section -->
  <div class="bg-white shadow sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
      <h3 class="text-lg font-medium text-gray-900">Incoming NCR Document</h3>
    </div>
    <div class="px-4 py-5 sm:p-6">
      <% if @external_ncr.has_document? %>
        <div class="flex items-center justify-between p-4 bg-gray-50 rounded-lg border border-gray-200">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <svg class="h-10 w-10 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-4">
              <p class="text-sm font-medium text-gray-900">
                <%= @external_ncr.document_filename %>
              </p>
              <p class="text-xs text-gray-500">
                <%= @external_ncr.document_size_formatted %>
                <% if @external_ncr.document_uploaded_date %>
                  • Uploaded <%= @external_ncr.document_uploaded_date.strftime("%d %b %Y at %H:%M") %>
                <% end %>
              </p>
            </div>
          </div>
          <div class="flex items-center space-x-3">
            <% if @download_url %>
              <%= link_to @download_url, target: "_blank",
                  class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded text-sm" do %>
                <svg class="-ml-1 mr-2 h-4 w-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Download
              <% end %>
            <% else %>
              <%= link_to download_document_external_ncr_path(@external_ncr),
                  class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded text-sm" do %>
                <svg class="-ml-1 mr-2 h-4 w-4 inline" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                Get Link
              <% end %>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="text-center py-6">
          <svg class="mx-auto h-12 w-12 text-red-400" fill="none" stroke="currentColor" viewBox="0 0 48 48">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0h-3m2 5a7 7 0 1114 0v3a7 7 0 01-14 0v-3z" />
          </svg>
          <h3 class="mt-2 text-sm font-medium text-gray-900">No Document Uploaded</h3>
          <p class="mt-1 text-sm text-gray-500">
            The incoming NCR document has not been uploaded yet.
          </p>
          <% if @external_ncr.can_replace_document? %>
            <div class="mt-6">
              <%= link_to edit_external_ncr_path(@external_ncr),
                  class: "bg-indigo-500 hover:bg-indigo-700 text-white font-bold py-2 px-4 rounded" do %>
                Upload Document
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 gap-6 lg:grid-cols-2">
    <!-- Left Column -->
    <div class="space-y-6">
      <!-- Status and Basic Info -->
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">NCR Information</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
            <div>
              <dt class="text-sm font-medium text-gray-500">Status</dt>
              <dd class="mt-1">
                <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @external_ncr.status_badge_class %>">
                  <%= @external_ncr.status.humanize %>
                </span>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Date</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @external_ncr.date.strftime("%d %B %Y") %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Created by</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @external_ncr.created_by.full_name %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Respondent</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @external_ncr.respondent&.full_name || "Unassigned" %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Reference Information -->
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">Reference Information</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <dl class="space-y-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Customer</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @external_ncr.customer_name %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Release Note</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to @external_ncr.release_note_number, @external_ncr.release_note,
                    class: "text-blue-600 hover:text-blue-900 font-medium" %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Works Order</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= link_to @external_ncr.works_order_number, @external_ncr.works_order,
                    class: "text-blue-600 hover:text-blue-900 font-medium" %>
              </dd>
            </div>
            <div>
              <dt class="text-sm font-medium text-gray-500">Part</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <%= @external_ncr.part_number %>-<%= @external_ncr.part_issue %>
                <% if @external_ncr.part_description.present? %>
                  <div class="text-xs text-gray-500 mt-1">
                    <%= @external_ncr.part_description %>
                  </div>
                <% end %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Additional Reference Numbers -->
      <% if [@external_ncr.advice_number, @external_ncr.concession_number, @external_ncr.customer_ncr_number, @external_ncr.customer_po_number, @external_ncr.batch_quantity, @external_ncr.reject_quantity].any?(&:present?) %>
        <div class="bg-white shadow sm:rounded-lg">
          <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
            <h3 class="text-lg font-medium text-gray-900">Additional Details</h3>
          </div>
          <div class="px-4 py-5 sm:p-6">
            <dl class="grid grid-cols-1 gap-x-4 gap-y-4 sm:grid-cols-2">
              <% if @external_ncr.advice_number.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Advice No.</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @external_ncr.advice_number %></dd>
                </div>
              <% end %>
              <% if @external_ncr.concession_number.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Concession No.</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @external_ncr.concession_number %></dd>
                </div>
              <% end %>
              <% if @external_ncr.customer_po_number.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Customer P/O No.</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @external_ncr.customer_po_number %></dd>
                </div>
              <% end %>
              <% if @external_ncr.customer_ncr_number.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Customer NCR No.</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @external_ncr.customer_ncr_number %></dd>
                </div>
              <% end %>
              <% if @external_ncr.batch_quantity.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Batch Qty.</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @external_ncr.batch_quantity %></dd>
                </div>
              <% end %>
              <% if @external_ncr.reject_quantity.present? %>
                <div>
                  <dt class="text-sm font-medium text-gray-500">Reject Qty.</dt>
                  <dd class="mt-1 text-sm text-gray-900"><%= @external_ncr.reject_quantity %></dd>
                </div>
              <% end %>
            </dl>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Right Column -->
    <div class="space-y-6">
      <!-- NCR Content -->
      <div class="bg-white shadow sm:rounded-lg">
        <div class="px-4 py-5 sm:px-6 border-b border-gray-200">
          <h3 class="text-lg font-medium text-gray-900">NCR Content</h3>
        </div>
        <div class="px-4 py-5 sm:p-6">
          <dl class="space-y-6">
            <div>
              <dt class="text-sm font-medium text-gray-500 mb-2">Description of Non-Conformance</dt>
              <dd class="text-sm text-gray-900">
                <% if @external_ncr.description_of_non_conformance.present? %>
                  <div class="whitespace-pre-wrap bg-gray-50 p-3 rounded border">
                    <%= @external_ncr.description_of_non_conformance %>
                  </div>
                <% else %>
                  <span class="text-gray-400 italic">Not provided</span>
                  <% if @external_ncr.status == 'draft' %>
                    <p class="text-xs text-yellow-600 mt-1">
                      Required to advance from draft status
                    </p>
                  <% end %>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500 mb-2">Investigation/Root Cause Analysis</dt>
              <dd class="text-sm text-gray-900">
                <% if @external_ncr.investigation_root_cause_analysis.present? %>
                  <div class="whitespace-pre-wrap bg-gray-50 p-3 rounded border">
                    <%= @external_ncr.investigation_root_cause_analysis %>
                  </div>
                <% else %>
                  <span class="text-gray-400 italic">Not provided</span>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500 mb-2">Root Cause Identified</dt>
              <dd class="text-sm text-gray-900">
                <% if @external_ncr.root_cause_identified.present? %>
                  <div class="whitespace-pre-wrap bg-gray-50 p-3 rounded border">
                    <%= @external_ncr.root_cause_identified %>
                  </div>
                <% else %>
                  <span class="text-gray-400 italic">Not provided</span>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500 mb-2">Containment/Corrective Action</dt>
              <dd class="text-sm text-gray-900">
                <% if @external_ncr.containment_corrective_action.present? %>
                  <div class="whitespace-pre-wrap bg-gray-50 p-3 rounded border">
                    <%= @external_ncr.containment_corrective_action %>
                  </div>
                <% else %>
                  <span class="text-gray-400 italic">Not provided</span>
                  <% if @external_ncr.status == 'in_progress' %>
                    <p class="text-xs text-yellow-600 mt-1">
                      Required to advance to completed status
                    </p>
                  <% end %>
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500 mb-2">Preventive Action</dt>
              <dd class="text-sm text-gray-900">
                <% if @external_ncr.preventive_action.present? %>
                  <div class="whitespace-pre-wrap bg-gray-50 p-3 rounded border">
                    <%= @external_ncr.preventive_action %>
                  </div>
                <% else %>
                  <span class="text-gray-400 italic">Not provided</span>
                  <% if @external_ncr.status == 'in_progress' %>
                    <p class="text-xs text-yellow-600 mt-1">
                      Required to advance to completed status
                    </p>
                  <% end %>
                <% end %>
              </dd>
            </div>
          </dl>
        </div>
      </div>

      <!-- Status Advancement Guide -->
      <% unless @external_ncr.status == 'completed' %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-blue-400" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-blue-800">Next Steps</h3>
              <div class="mt-2 text-sm text-blue-700">
                <% case @external_ncr.status %>
                <% when 'draft' %>
                  <p>To advance to <strong>In Progress</strong>:</p>
                  <ul class="list-disc list-inside mt-1">
                    <% unless @external_ncr.description_of_non_conformance.present? %>
                      <li>Add description of non-conformance</li>
                    <% end %>
                    <% unless @external_ncr.has_document? %>
                      <li>Upload the incoming NCR document</li>
                    <% end %>
                    <% if @external_ncr.can_advance_status? %>
                      <li class="text-green-700"><strong>Ready to advance!</strong></li>
                    <% end %>
                  </ul>
                <% when 'in_progress' %>
                  <p>To advance to <strong>Completed</strong>:</p>
                  <ul class="list-disc list-inside mt-1">
                    <% unless @external_ncr.containment_corrective_action.present? %>
                      <li>Add containment/corrective action</li>
                    <% end %>
                    <% unless @external_ncr.preventive_action.present? %>
                      <li>Add preventive action</li>
                    <% end %>
                    <% if @external_ncr.can_advance_status? %>
                      <li class="text-green-700"><strong>Ready to advance!</strong></li>
                    <% end %>
                  </ul>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex justify-between mt-8">
    <div>
      <%= link_to external_ncrs_path,
          class: "bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded" do %>
        ← Back to NCRs
      <% end %>
    </div>
    <div class="space-x-3">
      <% if @external_ncr.status == 'draft' %>
        <%= link_to @external_ncr,
            method: :delete,
            confirm: "Are you sure you want to delete this NCR? This will also delete the uploaded document.",
            class: "bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded" do %>
          Delete NCR
        <% end %>
      <% end %>
    </div>
  </div>
</div>
