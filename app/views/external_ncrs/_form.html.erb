<%# app/views/external_ncrs/_form.html.erb %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <div class="mb-6">
    <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl">
      <%= @external_ncr.persisted? ? "Edit NCR #{@external_ncr.display_name}" : "New External NCR" %>
    </h2>
  </div>

  <%= form_with(model: @external_ncr, local: true, multipart: true, class: "space-y-6") do |f| %>
    <% if @external_ncr.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded-md p-4">
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="ml-3">
            <h3 class="text-sm font-medium text-red-800">
              There <%= @external_ncr.errors.count == 1 ? 'was' : 'were' %>
              <%= pluralize(@external_ncr.errors.count, 'error') %> with your submission:
            </h3>
            <div class="mt-2 text-sm text-red-700">
              <ul class="list-disc pl-5 space-y-1">
                <% @external_ncr.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Document Upload Section -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Incoming NCR Document</h3>

        <% if @external_ncr.persisted? && @external_ncr.has_document? %>
          <!-- Existing Document Display -->
          <div class="mb-4 p-4 bg-gray-50 rounded-lg border border-gray-200">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <svg class="h-8 w-8 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z" clip-rule="evenodd" />
                </svg>
                <div class="ml-3">
                  <p class="text-sm font-medium text-gray-900"><%= @external_ncr.document_filename %></p>
                  <p class="text-xs text-gray-500">
                    <%= @external_ncr.document_size_formatted %>
                    <% if @external_ncr.document_uploaded_date %>
                      • Uploaded <%= @external_ncr.document_uploaded_date.strftime("%d %b %Y at %H:%M") %>
                    <% end %>
                  </p>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <%= link_to download_document_external_ncr_path(@external_ncr),
                    target: "_blank",
                    class: "inline-flex items-center px-3 py-1 border border-gray-300 rounded-md text-xs font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
                  <svg class="-ml-1 mr-1 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Download
                <% end %>
              </div>
            </div>
          </div>

          <!-- Document Replacement for Draft NCRs -->
          <% if @external_ncr.can_replace_document? %>
            <div class="mb-4">
              <label class="block text-sm font-medium text-gray-700 mb-2">
                Replace Document
                <span class="text-xs text-gray-500">(Optional - only for draft NCRs)</span>
              </label>
              <%= f.file_field :temp_document,
                  accept: ".pdf,.jpg,.jpeg,.png,.tiff,.tif,.doc,.docx",
                  class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
              <p class="mt-1 text-xs text-gray-500">
                Upload a new document to replace the existing one. Accepted formats: PDF, JPG, PNG, TIFF, DOC, DOCX (max 10MB)
              </p>
            </div>
          <% end %>
        <% else %>
          <!-- New Document Upload -->
          <div class="mb-4">
            <label class="block text-sm font-medium text-gray-700 mb-2">
              Upload Incoming NCR Document
              <span class="text-red-500">*</span>
            </label>
            <%= f.file_field :temp_document,
                accept: ".pdf,.jpg,.jpeg,.png,.tiff,.tif,.doc,.docx",
                required: true,
                class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-md file:border-0 file:text-sm file:font-medium file:bg-indigo-50 file:text-indigo-700 hover:file:bg-indigo-100" %>
            <p class="mt-1 text-xs text-gray-500">
              Required. Upload the NCR document received from the customer. Accepted formats: PDF, JPG, PNG, TIFF, DOC, DOCX (max 10MB)
            </p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Basic Information -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Basic Information</h3>

        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
          <!-- Release Note Selection -->
          <div class="sm:col-span-2">
            <label class="block text-sm font-medium text-gray-700">Release Note</label>
            <% if @external_ncr.persisted? %>
              <!-- Show existing release note (read-only) -->
              <div class="mt-1 p-3 bg-gray-50 rounded-md">
                <p class="text-sm text-gray-900">
                  <%= link_to @external_ncr.release_note_number, @external_ncr.release_note, class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
                  - <%= @external_ncr.customer_name %> -
                  <%= @external_ncr.part_number %>-<%= @external_ncr.part_issue %>
                </p>
              </div>
            <% elsif @release_note %>
              <!-- Pre-selected release note -->
              <%= f.hidden_field :release_note_id, value: @release_note.id %>
              <div class="mt-1 p-3 bg-gray-50 rounded-md">
                <p class="text-sm text-gray-900">
                  <%= link_to "RN#{@release_note.number}", @release_note, class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
                  - <%= @release_note.works_order.customer_name %> -
                  <%= @release_note.works_order.part_number %>-<%= @release_note.works_order.part_issue %>
                </p>
              </div>
            <% else %>
              <!-- Release note dropdown -->
              <%= f.collection_select :release_note_id, @release_notes, :id, :display_name,
                  { prompt: "Select a release note..." },
                  { id: "external_ncr_release_note_id", class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
            <% end %>
          </div>

          <!-- Date -->
          <div>
            <%= f.label :date, class: "block text-sm font-medium text-gray-700" %>
            <%= f.date_field :date,
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <!-- Handled by (Auto-assigned, Read-only) -->
          <div>
            <label class="block text-sm font-medium text-gray-700">Handled by</label>
            <div class="mt-1 p-3 bg-gray-50 rounded-md">
              <p class="text-sm text-gray-900">
                <%= @external_ncr.persisted? ? @external_ncr.respondent&.full_name : Current.user.full_name %>
                <span class="text-xs text-gray-500">(Auto-assigned)</span>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Reference Numbers -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Reference Numbers & Costs</h3>

        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
          <div>
            <%= f.label :concession_number, "Concession No. (Optional)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :concession_number,
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div>
            <%= f.label :customer_ncr_number, "Customer NCR No.", class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_field :customer_ncr_number,
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :estimated_cost, "Estimated Cost (£)", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :estimated_cost,
                min: 0, step: 0.01,
                placeholder: "e.g. 150.00",
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            <p class="mt-1 text-xs text-gray-500">
              Estimated cost to resolve this non-conformance (optional)
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Quantities -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">Quantities</h3>

        <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-2">
          <!-- Auto-populated batch quantity (read-only) -->
          <div>
            <label class="block text-sm font-medium text-gray-700">Batch Qty. (from Release Note)</label>
            <div class="mt-1 p-3 bg-gray-50 rounded-md">
              <p class="text-sm text-gray-900 batch-qty-display">
                <% if @external_ncr.release_note&.present? %>
                  <%= @external_ncr.batch_quantity_from_release_note %>
                  <span class="text-xs text-gray-500">
                    (Accepted: <%= @external_ncr.release_note.quantity_accepted %>,
                     Rejected: <%= @external_ncr.release_note.quantity_rejected %>)
                  </span>
                <% else %>
                  <span class="text-gray-400">Select release note to see batch quantity</span>
                <% end %>
              </p>
            </div>
          </div>

          <!-- Auto-populated customer PO (read-only) -->
          <div>
            <label class="block text-sm font-medium text-gray-700">Customer P/O No. (from Works Order)</label>
            <div class="mt-1 p-3 bg-gray-50 rounded-md">
              <p class="text-sm text-gray-900 customer-po-display">
                <% if @external_ncr.release_note&.present? %>
                  <%= @external_ncr.customer_po_number_from_works_order || "Not specified" %>
                <% else %>
                  <span class="text-gray-400">Select release note to see customer P/O</span>
                <% end %>
              </p>
            </div>
          </div>

          <div class="sm:col-span-2">
            <%= f.label :reject_quantity, "NCR Reject Qty.", class: "block text-sm font-medium text-gray-700" %>
            <%= f.number_field :reject_quantity,
                min: 0,
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
            <p class="mt-1 text-xs text-gray-500">
              Quantity being rejected in this NCR
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- NCR Content -->
    <div class="bg-white shadow sm:rounded-lg">
      <div class="px-4 py-5 sm:p-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900 mb-4">NCR Content</h3>

        <div class="space-y-6">
          <div>
            <%= f.label :description_of_non_conformance, "Description of Non-Conformance",
                class: "block text-sm font-medium text-gray-700" %>
            <p class="mt-1 text-xs text-gray-500 mb-2">
              Required to advance from draft status
            </p>
            <%= f.text_area :description_of_non_conformance,
                rows: 4,
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div>
            <%= f.label :investigation_root_cause_analysis, "Investigation/Root Cause Analysis",
                class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :investigation_root_cause_analysis,
                rows: 4,
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div>
            <%= f.label :root_cause_identified, "Root Cause Identified",
                class: "block text-sm font-medium text-gray-700" %>
            <%= f.text_area :root_cause_identified,
                rows: 3,
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div>
            <%= f.label :containment_corrective_action, "Containment/Corrective Action",
                class: "block text-sm font-medium text-gray-700" %>
            <p class="mt-1 text-xs text-gray-500 mb-2">
              Required to advance from in-progress to completed status
            </p>
            <%= f.text_area :containment_corrective_action,
                rows: 4,
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>

          <div>
            <%= f.label :preventive_action, "Preventive Action",
                class: "block text-sm font-medium text-gray-700" %>
            <p class="mt-1 text-xs text-gray-500 mb-2">
              Required to advance from in-progress to completed status
            </p>
            <%= f.text_area :preventive_action,
                rows: 4,
                class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
          </div>
        </div>
      </div>
    </div>

    <!-- Form Actions -->
    <div class="flex justify-end space-x-3">
      <%= link_to (@external_ncr.persisted? ? @external_ncr : external_ncrs_path),
          class: "py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        Cancel
      <% end %>

      <%= f.submit (@external_ncr.persisted? ? "Update NCR" : "Create NCR"),
          class: "py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
    </div>
  <% end %>
</div>

<script>
// Use event delegation to handle the release note change
document.addEventListener('change', function(e) {
  // Check if the changed element is our release note select
  if (e.target && e.target.id === 'external_ncr_release_note_id') {
    console.log('Release note changed via delegation:', e.target.value);
    handleReleaseNoteChange(e.target.value);
  }
});

// Handle file input changes
document.addEventListener('change', function(e) {
  if (e.target && e.target.type === 'file') {
    const file = e.target.files[0];
    if (file) {
      // Validate file size (10MB limit)
      if (file.size > 10 * 1024 * 1024) {
        alert('File size must be less than 10MB');
        e.target.value = '';
        return;
      }

      // Validate file type
      const allowedTypes = [
        'application/pdf',
        'image/jpeg',
        'image/jpg',
        'image/png',
        'image/tiff',
        'image/tif',
        'application/msword',
        'application/vnd.openxmlformats-officedocument.wordprocessingml.document'
      ];

      if (!allowedTypes.includes(file.type)) {
        alert('Please upload a valid file type: PDF, JPG, PNG, TIFF, DOC, or DOCX');
        e.target.value = '';
        return;
      }
    }
  }
});

function handleReleaseNoteChange(releaseNoteId) {
  if (releaseNoteId) {
    console.log('Fetching details for release note:', releaseNoteId);

    // Fetch release note details
    fetch(`/external_ncrs/release_note_details?release_note_id=${releaseNoteId}`, {
      method: 'GET',
      headers: {
        'Accept': 'application/json',
        'X-Requested-With': 'XMLHttpRequest'
      }
    })
    .then(response => {
      console.log('Response status:', response.status);
      return response.json();
    })
    .then(data => {
      console.log('Received data:', data);

      // Update batch quantity display
      const batchQtyDisplay = document.querySelector('.batch-qty-display');
      if (batchQtyDisplay && data.batch_quantity !== undefined) {
        batchQtyDisplay.innerHTML = `
          ${data.batch_quantity}
          <span class="text-xs text-gray-500">
            (Accepted: ${data.quantity_accepted}, Rejected: ${data.quantity_rejected})
          </span>
        `;
      }

      // Update customer PO display
      const poDisplay = document.querySelector('.customer-po-display');
      if (poDisplay) {
        poDisplay.textContent = data.customer_po_number || 'Not specified';
        poDisplay.className = 'text-sm text-gray-900 customer-po-display';
      }
    })
    .catch(error => {
      console.error('Error fetching release note details:', error);
    });
  } else {
    // Clear displays when no release note selected
    const batchQtyDisplay = document.querySelector('.batch-qty-display');
    if (batchQtyDisplay) {
      batchQtyDisplay.innerHTML = '<span class="text-gray-400">Select release note to see batch quantity</span>';
    }

    const poDisplay = document.querySelector('.customer-po-display');
    if (poDisplay) {
      poDisplay.innerHTML = '<span class="text-gray-400">Select release note to see customer P/O</span>';
      poDisplay.className = 'text-sm text-gray-900 customer-po-display';
    }
  }
}
</script>
