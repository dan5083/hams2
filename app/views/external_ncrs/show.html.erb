<%# app/views/external_ncrs/show.html.erb %>
<div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
  <!-- Header -->
  <div class="md:flex md:items-center md:justify-between mb-6">
    <div class="flex-1 min-w-0">
      <h2 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
        <%= @external_ncr.display_name %>
      </h2>
      <p class="mt-1 text-sm text-gray-500">
        <%= @external_ncr.display_title %>
      </p>
    </div>
    <div class="mt-4 flex space-x-3 md:mt-0 md:ml-4">
      <% if @external_ncr.can_advance_status? %>
        <%= link_to advance_status_external_ncr_path(@external_ncr),
            method: :patch,
            class: "inline-flex items-center px-4 py-2 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
          Advance Status
        <% end %>
      <% end %>
      <%= link_to edit_external_ncr_path(@external_ncr),
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        Edit
      <% end %>
    </div>
  </div>

  <!-- Status and Basic Info -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">NCR Information</h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Status</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @external_ncr.status_badge_class %>">
              <%= @external_ncr.status.humanize %>
            </span>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Date</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @external_ncr.date.strftime("%d %B %Y") %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Created by</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @external_ncr.created_by.full_name %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Assigned to</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @external_ncr.assigned_to&.full_name || "Unassigned" %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Reference Information -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">Reference Information</h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Customer</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @external_ncr.customer_name %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Release Note</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= link_to @external_ncr.release_note_number, @external_ncr.release_note, class: "text-indigo-600 hover:text-indigo-900" %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Works Order</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= link_to @external_ncr.works_order_number, @external_ncr.works_order, class: "text-indigo-600 hover:text-indigo-900" %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Part</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <%= @external_ncr.part_number %>-<%= @external_ncr.part_issue %>
            <div class="text-gray-500 text-xs mt-1"><%= @external_ncr.part_description %></div>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Additional Reference Numbers -->
  <% if @external_ncr.advice_number.present? || @external_ncr.concession_number.present? || @external_ncr.customer_ncr_number.present? || @external_ncr.customer_po_number.present? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Additional Reference Numbers</h3>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <% if @external_ncr.advice_number.present? %>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Advice No.</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @external_ncr.advice_number %></dd>
            </div>
          <% end %>
          <% if @external_ncr.concession_number.present? %>
            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Concession No.</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @external_ncr.concession_number %></dd>
            </div>
          <% end %>
          <% if @external_ncr.customer_po_number.present? %>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Customer P/O No.</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @external_ncr.customer_po_number %></dd>
            </div>
          <% end %>
          <% if @external_ncr.customer_ncr_number.present? %>
            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Customer NCR No.</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @external_ncr.customer_ncr_number %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  <% end %>

  <!-- Quantities -->
  <% if @external_ncr.batch_quantity.present? || @external_ncr.reject_quantity.present? %>
    <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
      <div class="px-4 py-5 sm:px-6">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Quantities</h3>
      </div>
      <div class="border-t border-gray-200">
        <dl>
          <% if @external_ncr.batch_quantity.present? %>
            <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Batch Qty.</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @external_ncr.batch_quantity %></dd>
            </div>
          <% end %>
          <% if @external_ncr.reject_quantity.present? %>
            <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
              <dt class="text-sm font-medium text-gray-500">Reject Qty.</dt>
              <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2"><%= @external_ncr.reject_quantity %></dd>
            </div>
          <% end %>
        </dl>
      </div>
    </div>
  <% end %>

  <!-- NCR Content -->
  <div class="bg-white shadow overflow-hidden sm:rounded-lg mb-6">
    <div class="px-4 py-5 sm:px-6">
      <h3 class="text-lg leading-6 font-medium text-gray-900">NCR Content</h3>
    </div>
    <div class="border-t border-gray-200">
      <dl>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Description of Non-Conformance</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @external_ncr.description_of_non_conformance.present? %>
              <div class="whitespace-pre-wrap"><%= @external_ncr.description_of_non_conformance %></div>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Investigation/Root Cause Analysis</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @external_ncr.investigation_root_cause_analysis.present? %>
              <div class="whitespace-pre-wrap"><%= @external_ncr.investigation_root_cause_analysis %></div>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Root Cause Identified</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @external_ncr.root_cause_identified.present? %>
              <div class="whitespace-pre-wrap"><%= @external_ncr.root_cause_identified %></div>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="bg-white px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Containment/Corrective Action</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @external_ncr.containment_corrective_action.present? %>
              <div class="whitespace-pre-wrap"><%= @external_ncr.containment_corrective_action %></div>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
        <div class="bg-gray-50 px-4 py-5 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-6">
          <dt class="text-sm font-medium text-gray-500">Preventive Action</dt>
          <dd class="mt-1 text-sm text-gray-900 sm:mt-0 sm:col-span-2">
            <% if @external_ncr.preventive_action.present? %>
              <div class="whitespace-pre-wrap"><%= @external_ncr.preventive_action %></div>
            <% else %>
              <span class="text-gray-400">Not provided</span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>
  </div>

  <!-- Actions -->
  <div class="flex justify-between">
    <div>
      <%= link_to external_ncrs_path,
          class: "inline-flex items-center px-4 py-2 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" do %>
        ‚Üê Back to NCRs
      <% end %>
    </div>
    <div class="space-x-3">
      <% if @external_ncr.status == 'draft' %>
        <%= link_to @external_ncr,
            method: :delete,
            confirm: "Are you sure you want to delete this NCR?",
            class: "inline-flex items-center px-4 py-2 border border-red-300 rounded-md shadow-sm text-sm font-medium text-red-700 bg-white hover:bg-red-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
          Delete
        <% end %>
      <% end %>
    </div>
  </div>
</div>
