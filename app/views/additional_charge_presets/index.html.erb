<%# app/views/additional_charge_presets/index.html.erb %>
<div class="container mx-auto px-4 py-6">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Additional Charge Presets</h1>
    <div class="flex space-x-2">
      <%= link_to "New Charge Preset", new_additional_charge_preset_path,
          class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded" %>
      <%= link_to "Back to Artifacts", artifacts_path,
          class: "bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
    </div>
  </div>

  <div class="bg-white shadow overflow-hidden sm:rounded-lg">
    <table class="min-w-full divide-y divide-gray-200">
      <thead class="bg-gray-50">
        <tr>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Name
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Description
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Amount
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Type
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Status
          </th>
          <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
            Actions
          </th>
        </tr>
      </thead>
      <tbody class="bg-white divide-y divide-gray-200">
        <% @additional_charge_presets.each do |charge_preset| %>
          <tr class="hover:bg-gray-50">
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= charge_preset.name %>
              </div>
            </td>
            <td class="px-6 py-4">
              <div class="text-sm text-gray-900 max-w-md truncate">
                <%= charge_preset.description %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <div class="text-sm font-medium text-gray-900">
                <%= charge_preset.formatted_amount %>
              </div>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if charge_preset.is_variable %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-orange-100 text-orange-800">
                  Variable
                </span>
              <% elsif charge_preset.calculation_type.present? %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-blue-100 text-blue-800">
                  <%= charge_preset.calculation_type.humanize %>
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-gray-100 text-gray-800">
                  Fixed
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap">
              <% if charge_preset.enabled %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-green-100 text-green-800">
                  Enabled
                </span>
              <% else %>
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full bg-red-100 text-red-800">
                  Disabled
                </span>
              <% end %>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
              <div class="flex space-x-2">
                <%= link_to "Edit", edit_additional_charge_preset_path(charge_preset),
                    class: "text-blue-600 hover:text-blue-900" %>

                <% if charge_preset.enabled %>
                  <%= link_to "Disable", toggle_enabled_additional_charge_preset_path(charge_preset),
                      method: :patch,
                      class: "text-yellow-600 hover:text-yellow-900",
                      data: { confirm: "Are you sure you want to disable this charge preset?" } %>
                <% else %>
                  <%= link_to "Enable", toggle_enabled_additional_charge_preset_path(charge_preset),
                      method: :patch,
                      class: "text-green-600 hover:text-green-900",
                      data: { confirm: "Are you sure you want to enable this charge preset?" } %>
                <% end %>

                <% if charge_preset.can_be_deleted? %>
                  <%= link_to "Delete", additional_charge_preset_path(charge_preset),
                      method: :delete,
                      class: "text-red-600 hover:text-red-900",
                      data: { confirm: "Are you sure you want to delete this charge preset?" } %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <% if @additional_charge_presets.empty? %>
      <div class="text-center py-8">
        <p class="text-gray-500">No charge presets found.</p>
        <%= link_to "Create your first charge preset", new_additional_charge_preset_path,
            class: "text-blue-600 hover:text-blue-800 underline" %>
      </div>
    <% end %>
  </div>

  <!-- Summary Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4 mt-6">
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Total Presets</h3>
      <p class="text-2xl font-bold text-gray-900"><%= @additional_charge_presets.count %></p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Fixed Charges</h3>
      <p class="text-2xl font-bold text-gray-600">
        <%= @additional_charge_presets.fixed.count %>
      </p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Variable Charges</h3>
      <p class="text-2xl font-bold text-orange-600">
        <%= @additional_charge_presets.variable.count %>
      </p>
    </div>
    <div class="bg-white p-4 rounded-lg shadow">
      <h3 class="text-sm font-medium text-gray-500">Enabled</h3>
      <p class="text-2xl font-bold text-green-600">
        <%= @additional_charge_presets.enabled.count %>
      </p>
    </div>
  </div>
</div>
